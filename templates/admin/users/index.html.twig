{% extends 'base.html.twig' %}

{% block title %}User management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #0a1a3a 0%, #1e3a8a 100%);
            color: #e5e7eb;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            margin: 0;
        }

        .page-header {
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            border-radius: 0 0 24px 24px;
            padding: 2.5rem 0;
            margin-bottom: 2.5rem;
            position: relative;
            overflow: hidden;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.2;
        }

        .header h1 {
            color: #ffffff;
            font-weight: 700;
            margin: 0;
            font-size: 2.5rem;
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 2;
        }

        .btn-back {
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
            color: #ffffff;
            font-weight: 600;
            border-radius: 12px;
            padding: 0.75rem 1.75rem;
            border: none;
            transition: all 0.3s ease;
            position: relative;
            z-index: 2;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-back:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
            background: linear-gradient(90deg, #2563eb, #3b82f6);
        }

        .search-box {
            max-width: 450px;
            margin-bottom: 1.5rem;
        }

        .search-box input {
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.05);
            color: #ffffff;
            padding: 0.75rem 1.25rem;
            transition: all 0.3s ease;
        }

        .search-box input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 12px rgba(59, 130, 246, 0.5);
            background: rgba(255, 255, 255, 0.1);
        }

        .search-box button {
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
            border: none;
            color: #ffffff;
            font-weight: 600;
            border-radius: 12px;
            padding: 0.75rem 1.25rem;
            transition: all 0.3s ease;
        }

        .search-box button:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
            background: linear-gradient(90deg, #2563eb, #3b82f6);
        }

        .table-container {
            background: rgba(17, 24, 39, 0.95);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(59, 130, 246, 0.2);
            position: relative;
            overflow: hidden;
        }

        .table-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
        }

        table.dataTable {
            border-collapse: separate;
            border-spacing: 0 12px;
            margin-top: 0 !important;
        }

        table.dataTable thead th {
            background: rgba(59, 130, 246, 0.15);
            color: #60a5fa;
            font-weight: 600;
            border: none;
            padding: 16px 12px;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1.2px;
        }

        table.dataTable tbody td {
            padding: 16px 12px;
            border-top: none;
            background: rgba(31, 41, 55, 0.8);
            color: #e5e7eb;
            vertical-align: middle;
            font-size: 0.9rem;
        }

        table.dataTable tbody tr {
            transition: background 0.3s ease;
        }

        table.dataTable tbody tr:first-child td:first-child {
            border-top-left-radius: 12px;
            border-bottom-left-radius: 12px;
        }

        table.dataTable tbody tr:first-child td:last-child {
            border-top-right-radius: 12px;
            border-bottom-right-radius: 12px;
        }

        table.dataTable tbody tr:hover td {
            background: rgba(59, 130, 246, 0.15);
        }

        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_processing,
        .dataTables_wrapper .dataTables_paginate {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 1.5rem;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            color: rgba(255, 255, 255, 0.8) !important;
            background: transparent !important;
            border: 1px solid rgba(59, 130, 246, 0.3);
            border-radius: 8px;
            padding: 0.5rem 1rem;
            margin: 0 4px;
            transition: all 0.3s ease;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current,
        .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
            background: linear-gradient(135deg, #3b82f6, #60a5fa) !important;
            color: #ffffff !important;
            border: none;
            border-radius: 8px;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: rgba(59, 130, 246, 0.3) !important;
            color: #ffffff !important;
            border-color: #3b82f6;
        }

        .user-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #3b82f6;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .user-avatar:hover {
            transform: scale(1.15);
            box-shadow: 0 0 12px rgba(59, 130, 246, 0.5);
        }

        .badge {
            font-weight: 600;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            text-shadow: none;
        }

        .badge.bg-danger {
            background: linear-gradient(90deg, #ef4444, #f87171);
        }

        .badge.bg-primary {
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
        }

        .badge.bg-secondary {
            background: #4b5563;
        }

        .btn-action {
            border: none;
            color: #ffffff;
            font-weight: 600;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            margin: 0 4px;
            min-width: 110px;
            text-align: center;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

        .btn-details {
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
        }

        .btn-block-user {
            background: linear-gradient(90deg, #ef4444, #f87171);
        }

        .btn-details:hover, .btn-block-user:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
        }

        @media (max-width: 768px) {
            .search-box {
                max-width: 100%;
            }
            .page-header h1 {
                font-size: 1.8rem;
            }
            thead th {
                font-size: 0.85rem;
            }
            tbody td {
                font-size: 0.8rem;
            }
            .btn-action {
                min-width: 90px;
                padding: 0.4rem 0.8rem;
            }
        }

        /* Modal Styles */
        .modal-content {
            background: #111827;
            border-radius: 16px;
            border: 1px solid rgba(59, 130, 246, 0.2);
        }

        .modal-header {
            background: linear-gradient(90deg, #1e40af, #3b82f6);
            border-bottom: none;
            border-radius: 16px 16px 0 0;
        }

        .modal-title {
            color: #ffffff;
            font-weight: 600;
        }

        .modal-body h6 {
            color: #60a5fa !important;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .modal-body .border-secondary {
            border-color: rgba(59, 130, 246, 0.3) !important;
            background: rgba(31, 41, 55, 0.9);
        }

        .modal-footer {
            background: #111827;
            border-top: none;
            border-radius: 0 0 16px 16px;
        }

        .modal-footer .btn-secondary {
            background: #4b5563;
            border: none;
            border-radius: 8px;
        }

        .modal-footer .btn-primary {
            background: linear-gradient(90deg, #3b82f6, #60a5fa);
            border: none;
            border-radius: 8px;
        }

        .modal-footer .btn-primary:hover {
            background: linear-gradient(90deg, #2563eb, #3b82f6);
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-header animate__animated animate__fadeIn">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center header">
                <h1><i class="fas fa-users me-3"></i>User management</h1>
                <a href="{{ path('admin_dashboard') }}" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to dashboard
                </a>
            </div>
        </div>
    </div>

    <div class="container-fluid animate__animated animate__fadeInUp animate__delay-1s">
        <!-- Search -->
        <div class="search-box mb-4">
            <form method="get" action="{{ path('admin_users_index') }}" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="To research..." value="{{ search }}">
                <button type="submit"><i class="bi bi-search"></i> Research</button>
            </form>
        </div>

        <!-- Users Table -->
        <div class="table-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-table me-2" style="color: #60a5fa;"></i>
                    <h5 class="mb-0" style="color: #60a5fa; font-weight: 600;">Users List</h5>
                </div>
                <div class="user-stats">
                <span class="badge bg-primary">
                    <i class="fas fa-users me-1"></i> {{ users|length }} Users
                </span>
                </div>
            </div>
            <table id="usersTable" class="table table-borderless align-middle">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>
                            {% if user.avatar %}
                                <img src="{{ user.avatar }}" alt="Avatar" class="user-avatar">
                            {% else %}
                                <div class="user-avatar bg-secondary d-flex align-items-center justify-content-center">
                                    {{ user.nom|first|upper }}
                                </div>
                            {% endif %}
                        </td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.telephone }}</td>
                        <td class="text-nowrap">
                            <button type="button" class="btn-action btn-details" data-bs-toggle="modal" data-bs-target="#userDetailsModal"
                                    data-user='{{ {
                                        'id': user.id,
                                        'nom': user.nom,
                                        'email': user.email,
                                        'telephone': user.telephone,
                                        'adresse': user.adresse,
                                        'dateInscription': user.dateInscription|date('d/m/Y H:i'),
                                        'roles': user.roles,
                                        'avatar': user.avatar
                                    }|json_encode|e('html_attr') }}'>
                                <i class="bi bi-eye"></i> Détails
                            </button>
                            <form method="post" action="{{ path('admin_users_delete', {'id': user.id}) }}"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir bloquer définitivement cet utilisateur ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" class="btn-action btn-block-user"><i class="bi bi-person-x"></i> Bloquer</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted">Aucun utilisateur trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal Détails Utilisateur -->
    <div class="modal fade" id="userDetailsModal" tabindex="-1" aria-labelledby="userDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content bg-dark text-white border-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="userDetailsModalLabel">Détails de l'utilisateur</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <div id="userAvatar" class="mb-4"></div>
                                <div id="userRoleBadges" class="mb-3"></div>
                            </div>
                            <div class="col-md-8">
                                <div class="mb-4">
                                    <h4 id="userName" class="text-white"></h4>
                                    <p class="text-muted">ID: <span id="userId" class="text-white"></span></p>
                                </div>
                                <div class="row g-4">
                                    <div class="col-md-6">
                                        <div class="p-3 rounded border border-secondary">
                                            <h6 class="text-muted mb-2">Email</h6>
                                            <p id="userEmail" class="mb-0"></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="p-3 rounded border border-secondary">
                                            <h6 class="text-muted mb-2">Téléphone</h6>
                                            <p id="userPhone" class="mb-0"></p>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="p-3 rounded border border-secondary">
                                            <h6 class="text-muted mb-2">Adresse</h6>
                                            <p id="userAddress" class="mb-0"></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="p-3 rounded border border-secondary">
                                            <h6 class="text-muted mb-2">Inscrit le</h6>
                                            <p id="userJoinDate" class="mb-0"></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="p-3 rounded border border-secondary h-100">
                                            <h6 class="text-muted mb-2">Statut</h6>
                                            <p id="userStatus" class="mb-0">
                                                <span class="badge bg-success">Actif</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Modifier
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.5/i18n/fr-FR.json'
                },
                columnDefs: [
                    { orderable: false, targets: [1, 5] },
                    { className: 'text-center', targets: [0, 1, 4, 5] }
                ]
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);
        });

        document.addEventListener('DOMContentLoaded', function() {
            const userDetailsModal = document.getElementById('userDetailsModal');
            if (userDetailsModal) {
                userDetailsModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const userData = JSON.parse(button.getAttribute('data-user'));

                    // Update modal information
                    document.getElementById('userName').textContent = userData.nom;
                    document.getElementById('userId').textContent = '#' + userData.id;
                    document.getElementById('userEmail').textContent = userData.email || 'Non renseigné';
                    document.getElementById('userPhone').textContent = userData.telephone || 'Non renseigné';
                    document.getElementById('userAddress').textContent = userData.adresse || 'Non renseignée';
                    document.getElementById('userJoinDate').textContent = userData.dateInscription;

                    // Update avatar
                    const userAvatar = document.getElementById('userAvatar');
                    if (userData.avatar) {
                        userAvatar.innerHTML = `<img src="${userData.avatar}" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #3b82f6;" alt="Avatar">`;
                    } else {
                        userAvatar.innerHTML = `<div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 120px; height: 120px; font-size: 3rem; margin: 0 auto;">
                            ${userData.nom ? userData.nom.charAt(0).toUpperCase() : '?'}
                        </div>`;
                    }

                    // Update roles
                    const rolesContainer = document.getElementById('userRoleBadges');
                    rolesContainer.innerHTML = '';
                    if (userData.roles && userData.roles.length > 0) {
                        userData.roles.forEach(role => {
                            let badgeClass = 'badge bg-secondary me-1 mb-1';
                            if (role === 'ROLE_ADMIN') badgeClass = 'badge bg-danger me-1 mb-1';
                            else if (role === 'ROLE_USER') badgeClass = 'badge bg-primary me-1 mb-1';

                            const roleBadge = document.createElement('span');
                            roleBadge.className = badgeClass;
                            roleBadge.textContent = role.replace('ROLE_', '');
                            rolesContainer.appendChild(roleBadge);
                        });
                    }
                });
            }
        });
    </script>
{% endblock %}