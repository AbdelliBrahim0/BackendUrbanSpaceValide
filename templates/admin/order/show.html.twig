{% extends 'base.html.twig' %}

{% block title %}Commande #{{ order.id }} - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        :root {
            --primary: #3b82f6;
            --secondary: #60a5fa;
            --error: #ef4444;
            --success: #10b981;
            --warning: #f59e0b;
            --bg-primary: #0a1a3a;
            --bg-secondary: #1e3a8a;
            --surface: rgba(17, 24, 39, 0.95);
            --card-bg: rgba(31, 41, 55, 0.8);
            --text-primary:rgb(21, 23, 27);
            --text-secondary:rgb(0, 0, 0);
            --text-muted:rgb(0, 0, 0);
            --border: rgba(59, 130, 246, 0.2);
            --shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.2;
            pointer-events: none;
            z-index: -1;
        }

        .container-fluid {
            padding: 2rem;
        }

        .page-header {
            background: none;
            padding: 1rem 0;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
            opacity: 0;
            transform: translateY(-20px);
        }

        .page-header h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--text-primary);
            margin: 0;
        }

        .card {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 12px;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(30px);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        .card-header {
            background: none;
            border-bottom: 1px solid var(--border);
            padding: 1rem 1.5rem;
            margin: -1.5rem -1.5rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-title {
            font-family: 'Poppins', sans-serif;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary);
            margin: 0;
        }

        .card-body {
            padding: 1.5rem;
        }

        .info-card {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .info-card-header {
            background: none;
            border-bottom: none;
            padding: 0;
            margin-bottom: 1rem;
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            font-weight: 600;
            color: var(--primary);
        }

        .info-card-body p {
            margin-bottom: 0.5rem;
            color: var(--text-primary);
        }

        .info-card-body p strong {
            color: var(--primary);
        }

        .table-responsive {
            margin-bottom: 1.5rem;
        }

        .table {
            background: var(--card-bg);
            border: none;
        }

        .table thead th {
            background: rgba(59, 130, 246, 0.1);
            color: var(--primary);
            font-weight: 600;
            border: none;
            padding: 12px 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
        }

        .table tbody td {
            padding: 12px 15px;
            border-top: 1px solid var(--border);
            vertical-align: middle;
            color: var(--text-primary);
        }

        .table tbody tr:hover td {
            background: rgba(59, 130, 246, 0.1);
        }

        .avatar {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid var(--border);
        }

        .badge {
            font-size: 0.7rem;
            font-weight: 500;
            padding: 0.35em 0.65em;
            border-radius: 20px;
        }

        .badge-success {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.9), rgba(34, 197, 94, 0.9));
            color: #fff;
        }

        .badge-info {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.9), rgba(96, 165, 250, 0.9));
            color: #fff;
        }

        .badge-secondary {
            background: var(--card-bg);
            color: var(--text-secondary);
            border: 1px solid var(--border);
        }

        .btn-modern {
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border: none;
            color: #fff;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            text-decoration: none;
        }

        .btn-modern:hover {
            background: linear-gradient(90deg, var(--secondary), var(--primary));
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.6);
        }

        .btn-secondary {
            background: var(--card-bg);
            border: 1px solid var(--border);
            color: var(--text-primary);
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .btn-secondary:hover {
            background: rgba(59, 130, 246, 0.2);
            color: var(--text-primary);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(59, 130, 246, 0.3);
        }

        .btn-info {
            background: linear-gradient(90deg, rgba(59, 130, 246, 0.9), rgba(96, 165, 250, 0.9));
            border: none;
            color: #fff;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .btn-info:hover {
            background: linear-gradient(90deg, rgba(96, 165, 250, 0.9), rgba(59, 130, 246, 0.9));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(59, 130, 246, 0.3);
        }

        .btn-success {
            background: linear-gradient(90deg, rgba(16, 185, 129, 0.9), rgba(34, 197, 94, 0.9));
            border: none;
            color: #fff;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .btn-success:hover {
            background: linear-gradient(90deg, rgba(34, 197, 94, 0.9), rgba(16, 185, 129, 0.9));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(16, 185, 129, 0.3);
        }

        .btn-danger {
            background: linear-gradient(90deg, rgba(239, 68, 68, 0.9), rgba(220, 38, 38, 0.9));
            border: none;
            color: #fff;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .btn-danger:hover {
            background: linear-gradient(90deg, rgba(220, 38, 38, 0.9), rgba(239, 68, 68, 0.9));
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(239, 68, 68, 0.3);
        }

        @media (max-width: 768px) {
            .card { padding: 1rem; }
            .table thead th, .table tbody td { font-size: 0.85rem; padding: 8px 10px; }
            .btn-modern, .btn-secondary, .btn-info, .btn-success, .btn-danger { padding: 0.25rem 1rem; font-size: 0.75rem; }
            .info-card { margin-bottom: 0.5rem; }
        }

        .loading {
            opacity: 0;
            transform: translateY(30px);
        }

        .icon {
            width: 1em;
            height: 1em;
            fill: currentColor;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="page-header loading">
                <h1 style="color: white;">Commande #{{ order.id }} - Admin</h1>
                <a href="{{ path('admin_orders_index') }}" class="btn-secondary">
                    <svg class="icon icon-sm" viewBox="0 0 24 24">
                        <path d="M19 12H5"/>
                        <path d="M12 19l-7-7 7-7"/>
                    </svg>
                    Retour
                </a>
            </div>
            <div class="card loading">
                <div class="card-header">
                    <h6 class="card-title" style="color: white; margin-top: 15px;">Détails de la commande #{{ order.id }}</h6>
                </div>
                <div class="card-body">
                    <!-- Informations générales -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="info-card">
                                <div class="info-card-header">Informations client</div>
                                <div class="info-card-body">
                                    <p class="mb-1" style="color: white;"><strong>Nom :</strong> {{ order.user.nom }}</p>
                                    <p class="mb-1" style="color: white;"><strong>Email :</strong> {{ order.user.email }}</p>
                                    <p class="mb-1" style="color: white;"><strong>Téléphone :</strong> {{ order.phoneNumber }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-card">
                                <div class="info-card-header">Adresse de livraison</div>
                                <div class="info-card-body">
                                    <p class="mb-1" style="color: white;">{{ order.shippingAddress|nl2br }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Détails de la commande -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="card-title" style="margin-top: 15px;">Articles commandés</h6>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Produit</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Prix unitaire</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Quantité</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Source</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for item in order.items %}
                                    <tr class="loading">
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="{{ item.product.urlImage ?: 'https://via.placeholder.com/100' }}" 
                                                         class="avatar avatar-sm me-3" alt="{{ item.product.name }}">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm text-primary">{{ item.product.name }}</h6>
                                                    <p class="text-xs text-secondary mb-0">ID: #{{ item.product.id }}</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">{{ item.price|number_format(2, ',', ' ') }} TND</p>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">{{ item.quantity }}</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-primary text-xs font-weight-bold">{{ (item.price * item.quantity)|number_format(2, ',', ' ') }} TND</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="badge {% if item.source %}badge-info{% else %}badge-secondary{% endif %}">
                                                {{ item.source ?? 'Standard' }}
                                            </span>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Total TTC :</strong></td>
                                        <td class="text-center" colspan="2">
                                            <strong class="h5">{{ order.total|number_format(2, ',', ' ') }} TND</strong>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="card">
                        <div class="card-header">
                            <h6 class="card-title">Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <form action="{{ path('admin_order_update_status', {'id': order.id}) }}" method="post" class="d-flex align-items-center">
                                        <div class="me-3">
                                            <label class="form-label" style="color: var(--primary);">Changer le statut :</label>
                                        </div>
                                        <select name="status" class="form-select me-2" style="width: auto; background: rgba(255, 255, 255, 0.1); border: 1px solid var(--border); color: var(--text-primary);">
                                            <option value="pending" {{ order.status == 'pending' ? 'selected' : '' }}>En attente</option>
                                            <option value="processing" {{ order.status == 'processing' ? 'selected' : '' }}>En traitement</option>
                                            <option value="shipped" {{ order.status == 'shipped' ? 'selected' : '' }}>Expédiée</option>
                                            <option value="delivered" {{ order.status == 'delivered' ? 'selected' : '' }}>Livrée</option>
                                            <option value="cancelled" {{ order.status == 'cancelled' ? 'selected' : '' }}>Annulée</option>
                                        </select>
                                        <button type="submit" class="btn-modern btn-sm">
                                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                                <path d="M5 13l4 4L19 7"/>
                                            </svg>
                                            Mettre à jour
                                        </button>
                                    </form>
                                </div>
                                <div class="col-md-6 text-end">
                                    {% if order.status != 'cancelled' %}
                                    <a href="#" class="btn-danger btn-sm" 
                                       onclick="return confirm('Êtes-vous sûr de vouloir annuler cette commande ?')">
                                        <svg class="icon icon-sm" viewBox="0 0 24 24">
                                            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                                        </svg>
                                        Annuler
                                    </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    {{ parent() }}
    <script>
        // GSAP Animations
        gsap.to('.page-header', {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: "power3.out"
        });

        gsap.to('.card', {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: "power3.out",
            delay: 0.3,
            stagger: 0.1
        });

        gsap.to('.loading', {
            opacity: 1,
            y: 0,
            duration: 0.6,
            stagger: 0.1,
            ease: "power3.out",
            delay: 0.4
        });
    </script>
{% endblock %}
{% endblock %}