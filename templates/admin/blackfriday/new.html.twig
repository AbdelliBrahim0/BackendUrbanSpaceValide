{% extends 'base.html.twig' %}

{% block title %}Ajouter une promotion Black Friday{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        :root {
            --primary: #3b82f6;
            --secondary: #60a5fa;
            --error: #ef4444;
            --success: #10b981;
            --warning: #f59e0b;
            --bg-primary: #0a1a3a;
            --bg-secondary: #1e3a8a;
            --surface: rgba(17, 24, 39, 0.95);
            --card-bg: rgba(31, 41, 55, 0.8);
            --text-primary: #e5e7eb;
            --text-secondary: #9ca3af;
            --text-muted: #6b7280;
            --border: rgba(59, 130, 246, 0.2);
            --shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.2;
            pointer-events: none;
            z-index: -1;
        }

        .container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .page-header {
            background: none;
            padding: 1rem 0;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .card {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(30px);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        .card-header {
            background: none;
            border-bottom: 1px solid var(--border);
            padding: 0 0 1rem;
            margin: -1.5rem -1.5rem 1.5rem;
        }

        .card-title {
            font-family: 'Poppins', sans-serif;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary);
            margin: 0;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            color: var(--primary);
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid var(--border);
            border-radius: 10px;
            color: var(--text-primary);
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
            color: var(--text-primary);
        }

        .form-control option {
            color: #000000; /* Définit la couleur du texte des options en noir */
        }

        .input-group-text {
            background: rgba(59, 130, 246, 0.1);
            border: 1px solid var(--border);
            border-left: none;
            color: var(--primary);
        }

        .invalid-feedback {
            color: var(--error);
            font-size: 0.875rem;
        }

        .text-muted {
            color: var(--text-muted) !important;
            font-size: 0.85rem;
        }

        .badge-success {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.9), rgba(34, 197, 94, 0.9));
            color: #fff;
            border-radius: 20px;
            padding: 0.25rem 0.75rem;
            font-weight: 500;
        }

        .alert-danger {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.9), rgba(220, 38, 38, 0.9));
            border: none;
            color: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(220, 38, 38, 0.4);
            margin-bottom: 1rem;
            opacity: 0;
            transform: translateY(-20px);
        }

        .btn-modern {
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border: none;
            color: #fff;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .btn-modern:hover {
            background: linear-gradient(90deg, var(--secondary), var(--primary));
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.6);
        }

        .btn-secondary {
            background: var(--card-bg);
            border: 1px solid var(--border);
            color: var(--text-primary);
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .btn-secondary:hover {
            background: rgba(59, 130, 246, 0.2);
            color: var(--text-primary);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(59, 130, 246, 0.3);
        }

        @media (max-width: 768px) {
            .card { padding: 1rem; }
            .card-header { padding: 0 0 0.75rem; margin: -1rem -1rem 1rem; }
            .form-control { padding: 0.5rem 0.75rem; }
            .btn-modern, .btn-secondary { padding: 0.25rem 1rem; font-size: 0.75rem; }
        }

        .loading {
            opacity: 0;
            transform: translateY(30px);
        }

        .icon {
            width: 1em;
            height: 1em;
            fill: currentColor;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header loading">
            <h1 class="h3 mb-0" style="font-family: 'Poppins', sans-serif; font-weight: 700; color: var(--text-primary);">
                Ajouter une promotion Black Friday
            </h1>
            <a href="{{ path('app_admin_black_friday_index') }}" class="btn-secondary">
                <svg class="icon icon-sm" viewBox="0 0 24 24">
                    <path d="M19 12H5"/>
                    <path d="M12 19l-7-7 7-7"/>
                </svg>
                Retour à la liste
            </a>
        </div>

        <div class="card loading">
            <div class="card-header">
                <h6 class="card-title">Sélectionner un produit</h6>
            </div>
            <div class="card-body">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger loading">
                        <svg class="icon icon-sm" viewBox="0 0 24 24" fill="white">
                            <path d="M12 9v2m0 4h.01m-6.938 4a10 10 0 11-2-2h0a10 10 0 112 2z"/>
                        </svg>
                        {{ message }}
                    </div>
                {% endfor %}

                <form method="post" class="needs-validation" novalidate>
                    <div class="form-group">
                        <label for="produit" class="form-label">Produit</label>
                        <select class="form-control" id="produit" name="produit" required>
                            <option value="">Sélectionnez un produit</option>
                            {% for produit in produits %}
                                <option value="{{ produit.id }}">
                                    {{ produit.name }} - {{ produit.price|number_format(2, ',', ' ') }} €
                                </option>
                            {% endfor %}
                        </select>
                        <div class="invalid-feedback">
                            Veuillez sélectionner un produit.
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="nouveau_prix" class="form-label">Nouveau prix (€)</label>
                        <div class="input-group">
                            <input type="number"
                                   class="form-control"
                                   id="nouveau_prix"
                                   name="nouveau_prix"
                                   step="0.01"
                                   min="0.01"
                                   required
                                   oninput="calculateDiscount(this)">
                            <span class="input-group-text">€</span>
                        </div>
                        <div class="invalid-feedback">
                            Veuillez entrer un prix valide.
                        </div>
                        <small class="form-text text-muted">
                            Le prix de vente actuel est de <span id="prix_actuel">-</span> €
                            <span id="reduction" class="ml-2"></span>
                        </small>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn-modern">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <path d="M5 13l4 4L19 7"/>
                            </svg>
                            Enregistrer la promotion
                        </button>
                        <a href="{{ path('app_admin_black_friday_index') }}" class="btn-secondary">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <path d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                            Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script>
            // Activer la validation des formulaires Bootstrap
            (function() {
                'use strict';
                window.addEventListener('load', function() {
                    var forms = document.getElementsByClassName('needs-validation');
                    var validation = Array.prototype.filter.call(forms, function(form) {
                        form.addEventListener('submit', function(event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();

            // Mettre à jour le prix actuel lors de la sélection d'un produit
            document.getElementById('produit').addEventListener('change', function() {
                const selectedOption = this.options[this.selectedIndex];
                if (selectedOption.value) {
                    const productName = selectedOption.text.split(' - ')[0];
                    const price = parseFloat(selectedOption.text.split(' - ')[1]);
                    document.getElementById('prix_actuel').textContent = price.toFixed(2).replace('.', ',');

                    // Mettre à jour le placeholder du champ de prix
                    const nouveauPrixInput = document.getElementById('nouveau_prix');
                    nouveauPrixInput.placeholder = 'Entrez un prix inférieur à ' + price.toFixed(2);
                    nouveauPrixInput.max = price - 0.01;
                } else {
                    document.getElementById('prix_actuel').textContent = '-';
                    document.getElementById('reduction').textContent = '';
                }
            });

            // Calculer et afficher la réduction en temps réel
            function calculateDiscount(input) {
                const produitSelect = document.getElementById('produit');
                if (!produitSelect.value) return;

                const prixInitial = parseFloat(produitSelect.options[produitSelect.selectedIndex].text.split(' - ')[1]);
                const nouveauPrix = parseFloat(input.value);

                if (nouveauPrix && !isNaN(nouveauPrix) && nouveauPrix < prixInitial) {
                    const reduction = Math.round(((prixInitial - nouveauPrix) / prixInitial * 100));
                    document.getElementById('reduction').innerHTML =
                        `<span class="badge badge-success">Réduction: -${reduction}%</span>`;
                } else {
                    document.getElementById('reduction').textContent = '';
                }
            }

            // GSAP Animations
            gsap.to('.page-header', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power3.out"
            });

            gsap.to('.card', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power3.out",
                delay: 0.3
            });

            gsap.to('.alert-danger', {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power3.out",
                delay: 0.2,
                onComplete: function() {
                    setTimeout(() => {
                        gsap.to(this.target, {
                            opacity: 0,
                            y: -20,
                            duration: 0.5,
                            ease: "power2.inOut",
                            onComplete: function() {
                                $(this.target).remove();
                            }
                        });
                    }, 5000);
                }
            });

            gsap.to('.loading', {
                opacity: 1,
                y: 0,
                duration: 0.6,
                stagger: 0.1,
                ease: "power3.out",
                delay: 0.4
            });
        </script>
    {% endblock %}
{% endblock %}