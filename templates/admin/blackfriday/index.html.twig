{% extends 'base.html.twig' %}

{% block title %}Promotions Black Friday{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        :root {
            --primary: #3b82f6;
            --secondary: #60a5fa;
            --error: #ef4444;
            --success: #10b981;
            --warning: #f59e0b;
            --bg-primary: #0a1a3a;
            --bg-secondary: #1e3a8a;
            --surface: rgba(17, 24, 39, 0.95);
            --card-bg: rgba(31, 41, 55, 0.8);
            --text-primary: #e5e7eb;
            --text-secondary: #9ca3af;
            --text-muted: #6b7280;
            --border: rgba(59, 130, 246, 0.2);
            --shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.2;
            pointer-events: none;
            z-index: -1;
        }

        .container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .card {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(30px);
        }

        .card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        .card-header {
            background: none;
            border-bottom: 1px solid var(--border);
            padding: 1rem 1.5rem;
            margin: -1.5rem -1.5rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-title {
            font-family: 'Poppins', sans-serif;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary);
            margin: 0;
        }

        .table-responsive {
            margin-bottom: 1.5rem;
        }

        table {
            background: var(--card-bg);
            border: none;
        }

        table thead th {
            background: rgba(59, 130, 246, 0.1);
            color: var(--primary);
            font-weight: 600;
            border: none;
            padding: 12px 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
        }

        table tbody td {
            padding: 12px 15px;
            border-top: 1px solid var(--border);
            vertical-align: middle;
            color: var(--text-primary);
        }

        table tbody tr:hover td {
            background: rgba(59, 130, 246, 0.1);
        }

        .badge-success {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.9), rgba(34, 197, 94, 0.9));
            color: #fff;
            border-radius: 20px;
            padding: 0.25rem 0.75rem;
            font-weight: 500;
        }

        .btn-modern {
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border: none;
            color: #fff;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .btn-modern:hover {
            background: linear-gradient(90deg, var(--secondary), var(--primary));
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.6);
        }

        .btn-danger {
            background: rgba(239, 68, 68, 0.2);
            border: 1px solid rgba(239, 68, 68, 0.4);
            color: var(--error);
            border-radius: 8px;
            padding: 0.5rem 1rem;
            transition: all 0.3s;
        }

        .btn-danger:hover {
            background: var(--error);
            color: #fff;
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(239, 68, 68, 0.3);
        }

        .alert-success {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.9), rgba(34, 197, 94, 0.9));
            border: none;
            color: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(34, 197, 94, 0.4);
            margin-bottom: 1rem;
            opacity: 0;
            transform: translateY(-20px);
        }

        .alert-info {
            background: rgba(59, 130, 246, 0.2);
            border: 1px solid var(--border);
            color: var(--text-primary);
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.2);
            margin-bottom: 1rem;
            opacity: 0;
            transform: translateY(-20px);
        }

        .pagination {
            display: flex;
            justify-content: center;
        }

        .page-item .page-link {
            background: var(--card-bg);
            color: var(--text-primary);
            border: 1px solid var(--border);
            margin: 0 2px;
        }

        .page-item.active .page-link {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: #fff;
            border: none;
        }

        .page-item.disabled .page-link {
            color: var(--text-muted);
            cursor: not-allowed;
        }

        .page-item .page-link:hover {
            background: rgba(59, 130, 246, 0.2);
            color: var(--text-primary);
        }

        @media (max-width: 768px) {
            .card { padding: 1rem; }
            .card-header { padding: 1rem; margin: -1rem -1rem 1rem; }
            table thead th, table tbody td { font-size: 0.85rem; padding: 8px 10px; }
            .btn-modern { padding: 0.25rem 1rem; font-size: 0.75rem; }
        }

        .loading {
            opacity: 0;
            transform: translateY(30px);
        }

        .icon {
            width: 1em;
            height: 1em;
            fill: currentColor;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="card loading">
            <div class="card-header">
                <h6 class="card-title">Liste des produits dans Black Friday</h6>
                <a href="{{ path('app_admin_black_friday_new') }}" class="btn-modern">
                    <svg class="icon icon-sm" viewBox="0 0 24 24">
                        <path d="M12 5v14M5 12h14"/>
                    </svg>
                    Ajouter un produit a Black Friday
                </a>

                <a href="{{ path('admin_dashboard') }}" class="btn-modern btn-secondary">
                    <svg class="icon icon-sm" viewBox="0 0 24 24">
                        <path d="M19 12H5"/>
                        <path d="M12 19l-7-7 7-7"/>
                    </svg>
                    Retour au dashboard
                </a>
            </div>
            <div class="card-body">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success loading">
                        <svg class="icon icon-sm" viewBox="0 0 24 24" fill="white">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        {{ message }}
                    </div>
                {% endfor %}

                {% if pagination.items|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Produit</th>
                                <th>Prix initial</th>
                                <th>Prix promo</th>
                                <th>Réduction</th>
                                <th>Date d'ajout</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for promo in pagination.items %}
                                <tr>
                                    <td>{{ promo.produit.name }}</td>
                                    <td>{{ promo.produit.price|number_format(2, ',', ' ') }} TND</td>
                                    <td class="text-danger font-weight-bold">{{ promo.nouveauPrix|number_format(2, ',', ' ') }} TND</td>
                                    <td>
                                        {% set reduction = ((promo.produit.price - promo.nouveauPrix) / promo.produit.price * 100)|round(0, 'ceil') %}
                                        <span class="badge badge-success">-{{ reduction }}%</span>
                                    </td>
                                    <td>{{ promo.dateCreation|date('d/m/Y H:i') }}</td>
                                    <td>
                                        <form method="post" action="{{ path('app_admin_black_friday_delete', {'id': promo.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette promotion ?');" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promo.id) }}">
                                            <button class="btn btn-danger btn-sm">
                                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                                    <path d="M3 6h18M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/>
                                                </svg>
                                                Supprimer
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="pagination mt-4">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <li class="page-item {{ pagination.currentPage == 1 ? 'disabled' : '' }}">
                                    <a class="page-link" href="{{ path('app_admin_black_friday_index', {'page': pagination.currentPage - 1}) }}" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                {% for i in 1..pagination.pagesCount %}
                                    <li class="page-item {{ pagination.currentPage == i ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('app_admin_black_friday_index', {'page': i}) }}">{{ i }}</a>
                                    </li>
                                {% endfor %}
                                <li class="page-item {{ pagination.currentPage == pagination.pagesCount ? 'disabled' : '' }}">
                                    <a class="page-link" href="{{ path('app_admin_black_friday_index', {'page': pagination.currentPage + 1}) }}" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                {% else %}
                    <div class="alert alert-info loading">
                        <svg class="icon icon-sm" viewBox="0 0 24 24" style="color: var(--text-primary);">
                            <path d="M12 2a10 10 0 100 20 10 10 0 000-20z"/>
                        </svg>
                        Aucune promotion n'a été enregistrée pour le moment.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script>
            // GSAP Animations
            gsap.to('.card', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power3.out"
            });

            gsap.to('.alert-success, .alert-info', {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power3.out",
                delay: 0.2,
                onComplete: function() {
                    setTimeout(() => {
                        gsap.to(this.target, {
                            opacity: 0,
                            y: -20,
                            duration: 0.5,
                            ease: "power2.inOut",
                            onComplete: function() {
                                $(this.target).remove();
                            }
                        });
                    }, 5000);
                }
            });

            gsap.to('.loading', {
                opacity: 1,
                y: 0,
                duration: 0.6,
                stagger: 0.1,
                ease: "power3.out",
                delay: 0.4
            });
        </script>
    {% endblock %}
{% endblock %}