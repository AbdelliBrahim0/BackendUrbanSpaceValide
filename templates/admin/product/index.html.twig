{% extends 'base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #121212 0%, #1a1a2e 100%);
            color: #fff;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, rgba(48, 174, 229, 0.9), rgba(37, 200, 173, 0.9));
            border-radius: 0 0 20px 20px;
            padding: 2rem 0;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(37, 200, 173, 0.3);
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }

        .header h1 {
            color: #fff;
            font-weight: 700;
            margin: 0;
            font-size: 2.2rem;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.2);
            position: relative;
            z-index: 2;
        }

        .btn-new-product {
            background: #3ebfef !important;
            color: #fff !important;
            font-weight: 600;
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
            border: none;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(62, 191, 239, 0.3);
        }

        .btn-new-product:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(62, 191, 239, 0.5);
            filter: brightness(1.1);
            background: #3ebfef !important;
            color: #fff !important;
        }

        .table-container {
            background: rgba(30, 30, 30, 0.8);
            border-radius: 20px;
            padding: 1.5rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(37, 200, 173, 0.1);
            position: relative;
            overflow: hidden;
        }

        .table-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #30aee5, #25c8ad);
        }

        table.dataTable {
            border-collapse: separate;
            border-spacing: 0 8px;
            margin-top: 0 !important;
        }

        table.dataTable thead th {
            background: rgba(37, 200, 173, 0.1);
            color: #25c8ad;
            font-weight: 600;
            border: none;
            padding: 15px 10px;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        table.dataTable tbody td {
            padding: 15px 10px;
            border-top: none;
            background: rgba(255, 255, 255, 0.03);
            vertical-align: middle;
            color: #ffffff !important;
        }

        /* Specific styles for product names and dates */
        table.dataTable tbody td:nth-child(2), table.dataTable tbody td:nth-child(7) {
            color: #ffffff !important;
            background-color: #333333 !important;
            border-radius: 6px;
            padding: 10px;
        }

        table.dataTable tbody tr:first-child td:first-child {
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }

        table.dataTable tbody tr:first-child td:last-child {
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        tbody tr:hover td {
            background-color: rgba(37, 200, 173, 0.1);
        }

        .badge {
            font-weight: 500;
            margin: 0.2rem;
            padding: 0.5em 0.8em;
            border-radius: 30px;
            font-size: 0.75rem;
        }

        .badge.bg-primary {
            background: linear-gradient(135deg, #30aee5, #25c8ad) !important;
            box-shadow: 0 2px 10px rgba(37, 200, 173, 0.3);
        }

        .badge.bg-secondary {
            background: rgba(255, 255, 255, 0.1) !important;
            color: rgba(255, 255, 255, 0.8) !important;
        }

        .badge.bg-success {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.8), rgba(32, 201, 151, 0.8)) !important;
            box-shadow: 0 2px 10px rgba(32, 201, 151, 0.3);
        }

        .badge.bg-danger {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.8), rgba(255, 107, 107, 0.8)) !important;
            box-shadow: 0 2px 10px rgba(255, 107, 107, 0.3);
        }

        .product-actions .btn {
            margin-right: 5px;
            transition: all 0.3s;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0;
        }

        .product-actions .btn-primary {
            background: rgba(48, 174, 229, 0.2);
            border-color: rgba(48, 174, 229, 0.4);
            color: #30aee5;
        }

        .product-actions .btn-danger {
            background: rgba(220, 53, 69, 0.2);
            border-color: rgba(220, 53, 69, 0.4);
            color: #dc3545;
        }

        .product-actions .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(37, 200, 173, 0.3);
        }

        .product-actions .btn-primary:hover {
            background: #30aee5;
            color: #fff;
        }

        .product-actions .btn-danger:hover {
            background: #dc3545;
            color: #fff;
        }

        .product-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid rgba(37, 200, 173, 0.2);
        }

        .alert-success {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.9), rgba(32, 201, 151, 0.9));
            border: none;
            color: white;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(32, 201, 151, 0.4);
        }

        .alert .btn-close {
            filter: invert(1);
        }

        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_processing,
        .dataTables_wrapper .dataTables_paginate {
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 1rem;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            color: rgba(255, 255, 255, 0.7) !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current,
        .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
            background: linear-gradient(135deg, #30aee5, #25c8ad) !important;
            color: white !important;
            border: none;
            border-radius: 50%;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: rgba(37, 200, 173, 0.2) !important;
            color: white !important;
            border: 1px solid rgba(37, 200, 173, 0.4);
        }

        .text-muted {
            color: rgba(255, 255, 255, 0.6) !important;
        }

        @media (max-width: 768px) {
            thead th, tbody td { font-size: 0.85rem; }
            .page-header { padding: 1.5rem 0; }
            .header h1 { font-size: 1.8rem; }
            .btn-new-product { padding: 0.5rem 1rem; font-size: 0.9rem; }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid mt-4 animate__animated animate__fadeInUp">
    <div class="d-flex justify-content-between align-items-center mb-4 header">
        <h1>Gestion des produits</h1>
        <a href="{{ path('admin_products_new') }}" class="btn btn-new-product">
            <i class="fas fa-plus"></i> Nouveau produit
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="table-responsive">
        <table id="productsTable" class="table table-hover table-borderless align-middle">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Stock</th>
                    <th>Catégories</th>
                    <th>Sous-catégories</th>
                    <th>Date de création</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for product in products %}
                    <tr>
                        <td>
                            {% if product.urlImage %}
                                <img src="{{ product.urlImage }}" alt="{{ product.name }}" class="product-image">
                            {% else %}
                                <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                    <i class="fas fa-image text-muted"></i>
                                </div>
                            {% endif %}
                        </td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }} €</td>
                        <td>
                            <span class="badge {{ product.stock > 0 ? 'bg-success' : 'bg-danger' }}">
                                {{ product.stock }} en stock
                            </span>
                        </td>
                        <td>
                            {% if product.categories|length > 0 %}
                                {% for category in product.categories|slice(0, 2) %}
                                    <span class="badge bg-primary">{{ category.name }}</span>
                                {% endfor %}
                                {% if product.categories|length > 2 %}
                                    <span class="badge bg-secondary">+{{ product.categories|length - 2 }} autres</span>
                                {% endif %}
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if product.subCategories|length > 0 %}
                                {% for subCategory in product.subCategories|slice(0, 2) %}
                                    <span class="badge bg-secondary">{{ subCategory.name }}</span>
                                {% endfor %}
                                {% if product.subCategories|length > 2 %}
                                    <span class="badge bg-secondary">+{{ product.subCategories|length - 2 }} autres</span>
                                {% endif %}
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endif %}
                        </td>
                        <td>{{ product.createdAt|date('d/m/Y H:i') }}</td>
                        <td class="product-actions">
                            <a href="{{ path('admin_products_edit', {'id': product.id}) }}" 
                               class="btn btn-sm btn-primary" 
                               title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" 
                                  action="{{ path('admin_products_delete', {'id': product.id}) }}" 
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');"
                                  style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button class="btn btn-sm btn-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center text-muted">Aucun produit trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2-multiple').select2({
                theme: 'bootstrap4',
                width: '100%',
                placeholder: 'Sélectionnez des options',
                allowClear: true
            });

            $('#productsTable').DataTable({
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.5/i18n/fr-FR.json'
                },
                columnDefs: [
                    { orderable: false, targets: [0, 4, 5, 7] },
                    { className: 'text-center', targets: [0, 2, 3, 7] }
                ],
                order: [[6, 'desc']] // Trier par date de création par défaut
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
{% endblock %}
