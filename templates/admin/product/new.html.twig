{% extends 'base.html.twig' %}

{% block title %}Nouveau produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #121212 0%, #1a1a2e 100%);
            color: #fff;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, rgba(48, 174, 229, 0.9), rgba(37, 200, 173, 0.9));
            border-radius: 0 0 20px 20px;
            padding: 2rem 0;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(37, 200, 173, 0.3);
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }

        h1 {
            color: #fff;
            font-weight: 700;
            margin: 0;
            font-size: 2.2rem;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.2);
            position: relative;
            z-index: 2;
        }

        .btn-back {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
            font-weight: 600;
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 255, 255, 0.3);
            background: rgba(255, 255, 255, 0.3);
        }

        .form-card {
            background: rgba(30, 30, 30, 0.8);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(37, 200, 173, 0.1);
            position: relative;
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .form-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #30aee5, #25c8ad);
        }

        .form-label {
            color: #25c8ad;
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(37, 200, 173, 0.2);
            border-radius: 10px;
            color: #fff;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: #25c8ad;
            box-shadow: 0 0 0 0.25rem rgba(37, 200, 173, 0.25);
            color: #fff;
        }

        .input-group-text {
            background: rgba(37, 200, 173, 0.1);
            border: 1px solid rgba(37, 200, 173, 0.2);
            border-right: none;
            color: #25c8ad;
        }

        .text-danger {
            color: #ff6b6b !important;
        }

        .text-muted, .form-text {
            color: rgba(255, 255, 255, 0.6) !important;
            font-size: 0.85rem;
        }

        .btn-primary {
            background: #3ebfef !important;
            border: none;
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(62, 191, 239, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(62, 191, 239, 0.5);
            filter: brightness(1.1);
            background: #3ebfef !important;
        }

        .btn-light {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #fff;
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-light:hover {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

        .select2-container--bootstrap4 .select2-selection {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(37, 200, 173, 0.2);
            border-radius: 10px;
            color: #fff;
        }

        .select2-container--bootstrap4 .select2-selection--multiple .select2-selection__choice {
            background: linear-gradient(135deg, #30aee5, #25c8ad);
            border: none;
            border-radius: 30px;
            color: #fff;
            padding: 2px 10px;
        }

        .select2-container--bootstrap4 .select2-selection--multiple .select2-selection__choice__remove {
            color: rgba(255, 255, 255, 0.7);
            margin-right: 5px;
        }

        .select2-container--bootstrap4 .select2-selection--multiple .select2-selection__choice__remove:hover {
            color: #fff;
        }

        /* Custom Select2 dark theme */
        .select2-container--bootstrap4 .select2-results__option {
            background-color: #1e1e1e !important;
            color: #ffffff !important;
        }

        .select2-container--bootstrap4 .select2-results__option--highlighted {
            background-color: #25c8ad !important;
            color: #000000 !important;
        }

        .select2-container--bootstrap4 .select2-results__option:hover {
            background-color: #333333 !important;
            color: #ffffff !important;
        }

        .select2-dropdown {
            background-color: #1e1e1e !important;
            border: 1px solid #25c8ad !important;
        }

        .form-section {
            margin-bottom: 1.5rem;
            padding: 1.5rem;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 15px;
            border-left: 3px solid #25c8ad;
            transition: all 0.3s ease;
        }

        .form-section:hover {
            background: rgba(37, 200, 173, 0.05);
            transform: translateX(5px);
        }

        .form-section-title {
            color: #25c8ad;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

        .form-section-title i {
            margin-right: 0.5rem;
        }

        .preview-image {
            max-width: 200px;
            max-height: 200px;
            margin-top: 10px;
            border-radius: 10px;
            border: 2px solid rgba(37, 200, 173, 0.2);
            display: none;
            transition: all 0.3s ease;
        }

        .preview-image:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 25px rgba(37, 200, 173, 0.3);
        }

        @media (max-width: 768px) {
            .page-header { padding: 1.5rem 0; }
            h1 { font-size: 1.8rem; }
            .btn-primary, .btn-light { padding: 0.5rem 1rem; font-size: 0.9rem; }
            .form-card { padding: 1rem; }
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h1>Nouveau produit</h1>
            <a href="{{ path('admin_products_index') }}" class="btn btn-back">
                <i class="fas fa-arrow-left me-2"></i>Retour à la liste
            </a>
        </div>
    </div>
</div>

<div class="container-fluid animate__animated animate__fadeInUp animate__delay-1s">
    <div class="form-card">
        <div class="d-flex align-items-center mb-4">
            <div class="product-icon me-3" style="width: 40px; height: 40px; border-radius: 10px; background: linear-gradient(135deg, #30aee5, #25c8ad); display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-box text-white"></i>
            </div>
            <h4 class="mb-0" style="color: #25c8ad; font-weight: 600;">Informations du produit</h4>
        </div>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-info-circle"></i> Informations de base
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.name, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text" style="background: rgba(37, 200, 173, 0.1); border: 1px solid rgba(37, 200, 173, 0.2); border-right: none; color: #25c8ad;">
                                    <i class="fas fa-tag"></i>
                                </span>
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du produit'}}) }}
                            </div>
                            <div class="text-danger">{{ form_errors(form.name) }}</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.price, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': '0.00'}}) }}
                                <span class="input-group-text">€</span>
                            </div>
                            <div class="text-danger">{{ form_errors(form.price) }}</div>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text" style="background: rgba(37, 200, 173, 0.1); border: 1px solid rgba(37, 200, 173, 0.2); border-right: none; color: #25c8ad;">
                                    <i class="fas fa-cubes"></i>
                                </span>
                                {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': 'Quantité en stock'}}) }}
                            </div>
                            <div class="text-danger">{{ form_errors(form.stock) }}</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.size, 'Taille', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                <span class="input-group-text" style="background: rgba(37, 200, 173, 0.1); border: 1px solid rgba(37, 200, 173, 0.2); border-right: none; color: #25c8ad;">
                                    <i class="fas fa-ruler-combined"></i>
                                </span>
                                {{ form_widget(form.size, {'attr': {'class': 'form-control', 'placeholder': 'Taille du produit'}}) }}
                            </div>
                            <div class="text-danger">{{ form_errors(form.size) }}</div>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Décrivez le produit en détail'}}) }}
                    <div class="text-danger">{{ form_errors(form.description) }}</div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">
                    <i class="fas fa-images"></i> Images du produit
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.urlImage, 'URL de l\'image principale', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.urlImage, {'attr': {'class': 'form-control', 'onchange': 'updateImagePreview(this, "previewImage")', 'placeholder': 'https://exemple.com/image.jpg'}}) }}
                            <img id="previewImage" src="#" alt="Aperçu de l'image" class="preview-image img-fluid mt-2">
                            <small class="form-text">
                                <i class="fas fa-info-circle me-1"></i> Image principale du produit
                            </small>
                            <div class="text-danger">{{ form_errors(form.urlImage) }}</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.urlImageHover, 'URL de l\'image au survol', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.urlImageHover, {'attr': {'class': 'form-control', 'onchange': 'updateImagePreview(this, "previewImageHover")', 'placeholder': 'https://exemple.com/image-hover.jpg'}}) }}
                            <img id="previewImageHover" src="#" alt="Aperçu de l'image au survol" class="preview-image img-fluid mt-2">
                            <small class="form-text">
                                <i class="fas fa-info-circle me-1"></i> Image affichée au survol (optionnel)
                            </small>
                            <div class="text-danger">{{ form_errors(form.urlImageHover) }}</div>
                        </div>
                    </div>

                <div class="d-flex justify-content-end mb-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Créer le produit
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2-multiple').select2({
                theme: 'bootstrap4',
                width: '100%',
                placeholder: 'Sélectionnez des options',
                allowClear: true,
                closeOnSelect: false
            });

            // Add custom styling for select2
            $('.select2-container--default .select2-selection--multiple').css({
                'background-color': '#2d2d2d',
                'border': '1px solid #3d3d3d',
                'min-height': '38px',
                'color': '#fff'
            });

            $('.select2-container--default .select2-selection--multiple .select2-selection__choice')
                .css('background-color', '#22c7b0')
                .css('border', 'none')
                .css('color', '#fff');

            $('.select2-container--default .select2-search--inline .select2-search__field')
                .css('color', '#fff')
                .attr('placeholder', 'Tapez pour rechercher...');
        });

        function updateImagePreview(input, previewId) {
            const preview = document.getElementById(previewId);
            const file = input.files && input.files[0];
            
            if (file) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                
                reader.readAsDataURL(file);
            } else if (input.value) {
                // For URL input
                preview.src = input.value;
                preview.style.display = 'block';
                preview.onerror = function() {
                    preview.style.display = 'none';
                };
            } else {
                preview.style.display = 'none';
            }
        }
    </script>
{% endblock %}
