{% extends 'base.html.twig' %}

{% block title %}Nouveau produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        :root {
            --primary: #3b82f6;
            --secondary: #60a5fa;
            --error: #ef4444;
            --success: #10b981;
            --warning: #f59e0b;
            --bg-primary: #0a1a3a;
            --bg-secondary: #1e3a8a;
            --surface: rgba(17, 24, 39, 0.95);
            --card-bg: rgba(31, 41, 55, 0.8);
            --text-primary: #e5e7eb;
            --text-secondary: #9ca3af;
            --text-muted: #6b7280;
            --border: rgba(59, 130, 246, 0.2);
            --shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.2;
            pointer-events: none;
            z-index: -1;
        }

        .container {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .page-header {
            background: var(--card-bg);
            border-bottom: 1px solid var(--border);
            padding: 2rem 0;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(-20px);
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        .header-container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-title {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .header-title h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #ffffff;
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            margin: 0;
        }

        .header-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .header-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn-modern {
            background: var(--card-bg);
            border: 1px solid var(--border);
            color: var(--text-primary);
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-size: 0.875rem;
            cursor: pointer;
        }

        .btn-modern.btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-color: transparent;
        }

        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow);
            color: var(--text-primary);
            text-decoration: none;
        }

        .btn-modern.btn-primary:hover {
            box-shadow: 0 15px 35px rgba(59, 130, 246, 0.4);
        }

        .btn-cancel {
            background: rgba(239, 68, 68, 0.1);
            color: var(--error);
            border: 1px solid rgba(239, 68, 68, 0.2);
        }

        .btn-cancel:hover {
            background: var(--error);
            color: white;
            border-color: var(--error);
        }

        .form-container {
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: var(--shadow);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(30px);
        }

        .form-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        .form-title {
            font-family: 'Poppins', sans-serif;
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .form-subtitle {
            color: var(--text-secondary);
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .form-grid {
            display: grid;
            gap: 2rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
        }

        .form-row.single {
            grid-template-columns: 1fr;
        }

        .form-group {
            position: relative;
        }

        .form-group.floating .form-control,
        .form-group.floating .form-select,
        .form-group.floating .select2-container .select2-selection--multiple {
            padding-top: 1.5rem;
            padding-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .form-group.floating textarea.form-control {
            padding-top: 1rem;
        }

        .form-group.floating .form-label {
            position: absolute;
            top: 1rem;
            left: 1rem;
            background: var(--card-bg);
            padding: 0 0.25rem;
            font-size: 0.9rem;
            color: var(--text-muted);
            transition: all 0.2s ease;
            pointer-events: none;
            z-index: 1;
        }

        .form-group.floating .form-control:focus + .form-label,
        .form-group.floating .form-control:not(:placeholder-shown) + .form-label,
        .form-group.floating .form-select:focus + .form-label,
        .form-group.floating .form-select:not(:placeholder-shown) + .form-label,
        .form-group.floating .select2-container--focus + .form-label,
        .form-group.floating .select2-container--filled + .form-label {
            top: -0.5rem;
            font-size: 0.75rem;
            color: var(--primary);
            font-weight: 600;
        }

        .form-control, .form-select {
            width: 100%;
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 1rem 1.25rem;
            color: var(--text-primary);
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            background: var(--card-bg);
            transform: translateY(-1px);
        }

        .form-control::placeholder {
            color: var(--text-muted);
        }

        .input-group .form-control {
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }

        .input-group-text {
            display: flex;
            align-items: center;
            padding: 1rem 1.25rem;
            font-size: 1rem;
            font-weight: 500;
            color: var(--text-secondary);
            background: var(--card-bg);
            border: 1px solid var(--border);
            border-left: none;
            border-radius: 0 12px 12px 0;
        }

        .form-control.textarea {
            min-height: 120px;
            resize: vertical;
        }

        .select2-container--default .select2-selection--multiple {
            background: var(--card-bg) !important;
            border: 1px solid var(--border) !important;
            border-radius: 12px !important;
            min-height: 56px !important;
            padding: 0.5rem !important;
        }

        .select2-container--default .select2-selection--multiple:focus {
            border-color: var(--primary) !important;
        }

        .select2-container--default .select2-selection--multiple .select2-selection__choice {
            background: linear-gradient(135deg, var(--primary), var(--secondary)) !important;
            border: none !important;
            color: white !important;
            border-radius: 50px !important;
            padding: 0.25rem 0.75rem !important;
            margin: 0.25rem !important;
            font-size: 0.875rem !important;
            font-weight: 500 !important;
        }

        .select2-container--default .select2-search--inline .select2-search__field {
            color: var(--text-primary) !important;
            background: transparent !important;
        }

        .select2-dropdown {
            background: var(--card-bg) !important;
            border: 1px solid var(--border) !important;
            border-radius: 12px !important;
        }

        .select2-results__option {
            color: var(--text-primary) !important;
            padding: 0.75rem 1rem !important;
        }

        .select2-results__option--highlighted {
            background: rgba(59, 130, 246, 0.2) !important;
        }

        .image-preview {
            margin-top: 1rem;
            border-radius: 12px;
            overflow: hidden;
            background: rgba(31, 41, 55, 0.3);
            border: 2px dashed var(--border);
            transition: all 0.3s ease;
            min-height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .image-preview.has-image {
            border-style: solid;
            border-color: var(--primary);
        }

        .image-preview img {
            max-width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }

        .image-placeholder {
            text-align: center;
            color: var(--text-muted);
            padding: 2rem;
        }

        .image-placeholder svg {
            width: 48px;
            height: 48px;
            margin-bottom: 0.5rem;
            opacity: 0.5;
        }

        .form-error {
            color: var(--error);
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .form-help {
            font-size: 0.8rem;
            color: var(--text-muted);
            margin-top: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .icon {
            width: 20px;
            height: 20px;
            stroke: currentColor;
            stroke-width: 2;
            fill: none;
        }

        .icon-sm {
            width: 16px;
            height: 16px;
        }

        .icon-lg {
            width: 24px;
            height: 24px;
        }

        @media (max-width: 768px) {
            .container {
                padding: 0 1rem;
            }

            .header-container {
                padding: 0 1rem;
                flex-direction: column;
                text-align: center;
            }

            .header-title h1 {
                font-size: 2rem;
            }

            .form-container {
                padding: 1.5rem;
            }

            .form-row {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-modern {
                justify-content: center;
            }
        }

        .loading {
            opacity: 0;
            transform: translateY(30px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header loading">
            <div class="header-container">
                <div class="header-title">
                    <div class="header-icon">
                        <svg class="icon icon-lg" viewBox="0 0 24 24" fill="white">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="16"/>
                            <line x1="8" y1="12" x2="16" y2="12"/>
                        </svg>
                    </div>
                    <h1>New product</h1>
                </div>
                <div class="header-actions">
                    <a href="{{ path('admin_products_index') }}" class="btn-modern">
                        <svg class="icon icon-sm" viewBox="0 0 24 24">
                            <path d="M19 12H5"/>
                            <path d="M12 19l-7-7 7-7"/>
                        </svg>
                        Back to list
                    </a>
                </div>
            </div>
        </div>

        <div class="form-container loading">
            <div class="form-title">
                <svg class="icon" viewBox="0 0 24 24" style="color: var(--primary);">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                </svg>
                Create a new product
            </div>
            <p class="form-subtitle">
                Add a new product to your catalog. Fill in all the necessary fields for optimal presentation.
            </p>

            {{ form_start(form, {'attr': {'class': 'product-form', 'novalidate': 'novalidate'}}) }}

            <div class="form-grid">
                <div class="form-row">
                    <div class="form-group floating">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', }}) }}
                        {{ form_label(form.name, 'Product name', {'label_attr': {'class': 'form-label'}}) }}
                        {% if form_errors(form.name) %}
                            <div class="form-error">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                {{ form_errors(form.name) }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="form-group floating">
                        <div class="input-group">
                            {{ form_widget(form.price, {'attr': {'class': 'form-control', }}) }}
                            <span class="input-group-text">TND</span>
                        </div>
                        {{ form_label(form.price, 'Price', {'label_attr': {'class': 'form-label'}}) }}
                        {% if form_errors(form.price) %}
                            <div class="form-error">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                {{ form_errors(form.price) }}
                            </div>
                        {% endif %}
                        <div class="form-help">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                                <line x1="12" y1="17" x2="12.01" y2="17"/>
                            </svg>
                            Prix de vente TTC en euros
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group floating">
                        {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': '100'}}) }}
                        {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'form-label'}}) }}
                        {% if form_errors(form.stock) %}
                            <div class="form-error">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                {{ form_errors(form.stock) }}
                            </div>
                        {% endif %}
                        <div class="form-help">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                                <line x1="12" y1="17" x2="12.01" y2="17"/>
                            </svg>
                            Quantity available in stock
                        </div>
                    </div>
                    <div class="form-group floating">
                        {{ form_widget(form.size, {'attr': {'class': 'form-control', }}) }}
                        {{ form_label(form.size, 'Size', {'label_attr': {'class': 'form-label'}}) }}
                        {% if form_errors(form.size) %}
                            <div class="form-error">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                {{ form_errors(form.size) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="form-row single">
                    <div class="form-group floating">
                        {{ form_widget(form.description, {'attr': {'class': 'form-control textarea', 'placeholder': 'Detailed description of the product, its characteristics, advantages...', 'rows': '4'}}) }}
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {% if form_errors(form.description) %}
                            <div class="form-error">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                {{ form_errors(form.description) }}
                            </div>
                        {% endif %}
                        <div class="form-help">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                                <line x1="12" y1="17" x2="12.01" y2="17"/>
                            </svg>
                            Marketing description that will be visible to customers
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group floating">
                        {{ form_widget(form.urlImage, {'attr': {'class': 'form-control', 'onchange': 'updateImagePreview(this, "previewImage")'}}) }}
                        {{ form_label(form.urlImage, 'Main image', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="image-preview" id="previewImageContainer">
                            <img id="previewImage" src="#" alt="Aperçu de l'image" style="display: none;">
                            <div class="image-placeholder" id="imagePlaceholder">
                                <svg class="icon" viewBox="0 0 24 24">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                    <circle cx="8.5" cy="8.5" r="1.5"/>
                                    <polyline points="21,15 16,10 5,21"/>
                                </svg>
                                <div>Aperçu de l'image principale</div>
                            </div>
                        </div>
                        {% if form_errors(form.urlImage) %}
                            <div class="form-error">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                {{ form_errors(form.urlImage) }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="form-group floating">
                        {{ form_widget(form.urlImageHover, {'attr': {'class': 'form-control',  'onchange': 'updateImagePreview(this, "previewImageHover")'}}) }}
                        {{ form_label(form.urlImageHover, 'Hover image', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="image-preview" id="previewImageHoverContainer">
                            <img id="previewImageHover" src="#" alt="Aperçu de l'image au survol" style="display: none;">
                            <div class="image-placeholder" id="imageHoverPlaceholder">
                                <svg class="icon" viewBox="0 0 24 24">
                                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                                    <circle cx="8.5" cy="8.5" r="1.5"/>
                                    <polyline points="21,15 16,10 5,21"/>
                                </svg>
                                <div>Aperçu de l'image au survol</div>
                            </div>
                        </div>
                        {% if form_errors(form.urlImageHover) %}
                            <div class="form-error">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                {{ form_errors(form.urlImageHover) }}
                            </div>
                        {% endif %}
                        <div class="form-help">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                                <line x1="12" y1="17" x2="12.01" y2="17"/>
                            </svg>
                            Image affichée au survol de la souris (optionnel)
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group floating">
                        {{ form_widget(form.categories, {'attr': {'class': 'form-control select2-multiple'}}) }}
                        {{ form_label(form.categories, '', {'label_attr': {'class': 'form-label'}}) }}
                        {% if form_errors(form.categories) %}
                            <div class="form-error">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                {{ form_errors(form.categories) }}
                            </div>
                        {% endif %}
                        <div class="form-help">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                                <line x1="12" y1="17" x2="12.01" y2="17"/>
                            </svg>
                            Sélectionnez une ou plusieurs catégories
                        </div>
                    </div>
                    <div class="form-group floating">
                        {{ form_widget(form.subCategories, {'attr': {'class': 'form-control select2-multiple'}}) }}
                        {{ form_label(form.subCategories, '', {'label_attr': {'class': 'form-label'}}) }}
                        {% if form_errors(form.subCategories) %}
                            <div class="form-error">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                {{ form_errors(form.subCategories) }}
                            </div>
                        {% endif %}
                        <div class="form-help">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
