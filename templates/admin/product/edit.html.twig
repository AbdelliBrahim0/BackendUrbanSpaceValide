{% extends 'base.html.twig' %}

{% block title %}Edit product- {{ product.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <style>
        :root {
            --primary: #3b82f6;
            --secondary: #60a5fa;
            --error: #ef4444;
            --success: #10b981;
            --warning: #f59e0b;
            --bg-primary: #0a1a3a;
            --bg-secondary: #1e3a8a;
            --surface: rgba(17, 24, 39, 0.95);
            --card-bg: rgba(31, 41, 55, 0.8);
            --text-primary: #e5e7eb;
            --text-secondary: #9ca3af;
            --text-muted: #6b7280;
            --border: rgba(59, 130, 246, 0.2);
            --shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.2;
            pointer-events: none;
            z-index: -1;
        }

        .container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
            opacity: 0;
            transform: translateY(-20px);
        }

        .page-header h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 2rem;
            font-weight: 700;
            color: #ffffff;
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            margin: 0;
        }

        .card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 16px;
            box-shadow: var(--shadow);
            opacity: 0;
            transform: translateY(20px);
        }

        .card-header {
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            color: #ffffff;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            border-radius: 16px 16px 0 0;
            padding: 1.25rem;
            border: none;
        }

        .card-body {
            padding: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        .form-group.floating .form-control,
        .form-group.floating .form-select {
            padding-top: 1.5rem;
            padding-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .form-group.floating textarea.form-control {
            padding-top: 1rem;
        }

        .form-group.floating .form-label {
            position: absolute;
            top: 1rem;
            left: 1rem;
            background: var(--card-bg);
            padding: 0 0.25rem;
            font-size: 0.9rem;
            color: var(--text-muted);
            transition: all 0.2s ease;
            pointer-events: none;
            z-index: 1;
        }

        .form-group.floating .form-control:focus + .form-label,
        .form-group.floating .form-control:not(:placeholder-shown) + .form-label,
        .form-group.floating .form-select:focus + .form-label,
        .form-group.floating .form-select:not(:placeholder-shown) + .form-label {
            top: -0.5rem;
            font-size: 0.75rem;
            color: var(--primary);
            font-weight: 600;
        }

        .form-control, .form-select {
            background: var(--card-bg);
            border: 1px solid var(--border);
            color: var(--text-primary);
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            background: var(--card-bg);
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25);
            color: var(--text-primary);
        }

        .btn-primary {
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border: none;
            color: #ffffff;
            font-weight: 600;
            font-size: 0.9rem;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
        }

        .btn-light {
            background: #4b5563;
            color: #ffffff;
            border: 1px solid var(--border);
            border-radius: 12px;
            font-size: 0.9rem;
            padding: 0.75rem 1.5rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .btn-light:hover {
            background: #6b7280;
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        }

        .form-text {
            color: var(--text-secondary);
            font-size: 0.85rem;
        }

        .text-danger {
            color: var(--error);
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        .preview-image {
            max-width: 180px;
            max-height: 180px;
            border-radius: 12px;
            border: 2px solid var(--border);
            margin-top: 1rem;
            transition: all 0.3s ease;
        }

        .preview-image:hover {
            transform: scale(1.05);
            border-color: var(--primary);
        }

        .image-preview-container {
            margin-top: 1rem;
        }

        .alert-modern {
            background: var(--surface);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: 12px;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--error);
            font-size: 0.9rem;
            opacity: 0;
            transform: translateY(-20px);
        }

        .alert-icon {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background: var(--error);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .icon {
            width: 20px;
            height: 20px;
            stroke: currentColor;
            stroke-width: 2;
            fill: none;
        }

        .icon-sm {
            width: 16px;
            height: 16px;
        }

        @media (max-width: 768px) {
            .container {
                padding: 0 1rem;
            }

            .page-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .page-header h1 {
                font-size: 1.5rem;
            }

            .card-body {
                padding: 1rem;
            }

            .preview-image {
                max-width: 100%;
            }
        }

        .loading {
            opacity: 0;
            transform: translateY(20px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header loading">
            <h1>Edit : {{ product.name }}</h1>
            <div>
                <a href="{{ path('admin_products_index') }}" class="btn-light">
                    <svg class="icon icon-sm" viewBox="0 0 24 24">
                        <path d="M19 12H5"/>
                        <path d="M12 19l-7-7 7-7"/>
                    </svg>
                    Back to list
                </a>
            </div>
        </div>

        {% for message in app.flashes('error') %}
            <div class="alert-modern loading">
                <div class="alert-icon">
                    <svg class="icon icon-sm" viewBox="0 0 24 24" fill="white">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="15" y1="9" x2="9" y2="15"/>
                        <line x1="9" y1="9" x2="15" y2="15"/>
                    </svg>
                </div>
                {{ message }}
            </div>
        {% endfor %}

        <div class="card loading">
            <div class="card-header">
                <h5 class="mb-0">Edit product information</h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="row g-4">
                    <div class="col-12">
                        <div class="row g-4">
                            <div class="col-md-6 form-group floating">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': ' '}}) }}
                                {{ form_label(form.name, 'Product name', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="text-danger">{{ form_errors(form.name) }}</div>
                            </div>
                            <div class="col-md-6 form-group floating">
                                {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': ' '}}) }}
                                {{ form_label(form.price, 'Price (TND)', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="text-danger">{{ form_errors(form.price) }}</div>
                            </div>
                        </div>

                        <div class="row g-4">
                            <div class="col-md-6 form-group floating">
                                {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': ' '}}) }}
                                {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="text-danger">{{ form_errors(form.stock) }}</div>
                            </div>
                            <div class="col-md-6 form-group floating">
                                {{ form_widget(form.size, {'attr': {'class': 'form-control', 'placeholder': ' '}}) }}
                                {{ form_label(form.size, 'Size', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="text-danger">{{ form_errors(form.size) }}</div>
                            </div>
                        </div>

                        <div class="form-group floating">
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': ' '}}) }}
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="text-danger">{{ form_errors(form.description) }}</div>
                        </div>

                        <div class="row g-4">
                            <div class="col-md-6 form-group floating">
                                {{ form_widget(form.urlImage, {'attr': {'class': 'form-control', 'placeholder': ' ', 'onchange': 'updateImagePreview(this, "previewImage")'}}) }}
                                {{ form_label(form.urlImage, "Image URL", {'label_attr': {'class': 'form-label'}}) }}
                                <div class="image-preview-container">
                                    {% if product.urlImage %}
                                        <img id="previewImage" src="{{ product.urlImage }}" alt="Aperçu de l'image" class="preview-image img-fluid">
                                    {% else %}
                                        <img id="previewImage" src="#" alt="Aperçu de l'image" class="preview-image img-fluid" style="display: none;">
                                    {% endif %}
                                </div>
                                <div class="text-danger">{{ form_errors(form.urlImage) }}</div>
                            </div>
                            <div class="col-md-6 form-group floating">
                                {{ form_widget(form.urlImageHover, {'attr': {'class': 'form-control', 'placeholder': ' ', 'onchange': 'updateImagePreview(this, "previewImageHover")'}}) }}
                                {{ form_label(form.urlImageHover, "Image URL on hover", {'label_attr': {'class': 'form-label'}}) }}
                                <div class="image-preview-container">
                                    {% if product.urlImageHover %}
                                        <img id="previewImageHover" src="{{ product.urlImageHover }}" alt="Aperçu de l'image au survol" class="preview-image img-fluid">
                                    {% else %}
                                        <img id="previewImageHover" src="#" alt="Aperçu de l'image au survol" class="preview-image img-fluid" style="display: none;">
                                    {% endif %}
                                </div>
                                <div class="text-danger">{{ form_errors(form.urlImageHover) }}</div>
                            </div>
                        </div>

                        <div class="row g-4">
                            <div class="col-md-6 form-group floating">
                                {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
                                {{ form_label(form.categories, 'Categories', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="text-danger">{{ form_errors(form.categories) }}</div>
                            </div>
                            <div class="col-md-6 form-group floating">
                                {{ form_widget(form.subCategories, {'attr': {'class': 'form-control'}}) }}
                                {{ form_label(form.subCategories, 'SubCategories', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="text-danger">{{ form_errors(form.subCategories) }}</div>
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn-primary">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
                                    <polyline points="17 21 17 13 7 13 7 21"/>
                                    <polyline points="7 3 7 8 15 8"/>
                                </svg>
                                Save
                            </button>
                            <a href="{{ path('admin_products_index') }}" class="btn-light ms-2">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <circle cx="12" cy="12" r="10"/>
                                    <line x1="15" y1="9" x2="9" y2="15"/>
                                    <line x1="9" y1="9" x2="15" y2="15"/>
                                </svg>
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // GSAP Animations
            gsap.to('.page-header', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power3.out"
            });

            gsap.to('.alert-modern', {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power3.out",
                delay: 0.2
            });

            gsap.to('.card', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power3.out",
                delay: 0.3
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                gsap.to('.alert-modern', {
                    opacity: 0,
                    y: -20,
                    duration: 0.5,
                    ease: "power2.inOut",
                    onComplete: function() {
                        $('.alert-modern').remove();
                    }
                });
            }, 5000);

            // Form input animations
            $('.form-group.floating .form-control').each(function() {
                if ($(this).val()) {
                    $(this).addClass('not-empty');
                }
                $(this).on('focus blur', function() {
                    $(this).toggleClass('not-empty', !!$(this).val() || $(this).is(':focus'));
                });
            });
        });

        function updateImagePreview(input, previewId) {
            const preview = document.getElementById(previewId);
            if (input.value) {
                preview.src = input.value;
                preview.style.display = 'block';
                preview.onerror = function() {
                    preview.style.display = 'none';
                };
            } else {
                preview.style.display = 'none';
            }
        }
    </script>
{% endblock %}