{% extends 'base.html.twig' %}

{% block title %}Modifier la collection - {{ collection.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #121212 0%, #1a1a2e 100%);
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
        }

        .hero-header {
            background: linear-gradient(135deg, #30aee6, #2243c7);
            padding: 2rem 0;
            border-radius: 0 0 30px 30px;
            margin-bottom: 2rem;
            box-shadow: 0 15px 35px rgba(34, 42, 199, 0.3);
            position: relative;
            overflow: hidden;
        }

        .hero-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }

        .hero-header h1 {
            font-weight: 800;
            font-size: 2.5rem;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.3);
            position: relative;
            z-index: 2;
        }

        .collection-badge {
            background: rgba(255,255,255,0.2);
            padding: 0.5rem 1rem;
            border-radius: 25px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.3);
            font-weight: 600;
        }

        .form-card {
            background: rgba(30, 30, 30, 0.9);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 25px 60px rgba(0,0,0,0.5);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(34, 81, 199, 0.2);
            position: relative;
            overflow: hidden;
        }

        .form-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #30aee6, #2251c7);
        }

        .form-section {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: rgba(255,255,255,0.03);
            border-radius: 15px;
            border-left: 4px solid #223dc7;
            transition: all 0.3s ease;
        }

        .form-section:hover {
            background: rgba(34,199,176,0.05);
            transform: translateX(5px);
        }

        .form-label {
            font-weight: 700;
            color: #2275c7;
            font-size: 1.1rem;
            margin-bottom: 0.8rem;
            display: flex;
            align-items: center;
        }

        .form-label::before {
            content: '';
            width: 6px;
            height: 6px;
            background: #222ac7;
            border-radius: 50%;
            margin-right: 10px;
        }

        .form-control {
            background: rgba(255,255,255,0.1);
            border: 2px solid rgba(34, 61, 199, 0.3);
            color: #fff;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255,255,255,0.15);
            border-color: #2238c7;
            box-shadow: 0 0 20px rgba(56, 34, 199, 0.3);
            color: #fff;
        }

        .form-control::placeholder {
            color: rgba(255,255,255,0.6);
        }

        .form-text {
            color: rgba(255,255,255,0.7);
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

        .btn-save {
            background: linear-gradient(135deg, #30aee6, #2251c7);
            border: none;
            padding: 1rem 2.5rem;
            font-weight: 700;
            border-radius: 50px;
            color: #fff;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(45, 34, 199, 0.4);
        }

        .btn-save:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(34, 73, 199, 0.6);
            filter: brightness(1.1);
        }

        .btn-cancel {
            background: rgba(255,255,255,0.1);
            border: 2px solid rgba(255,255,255,0.3);
            color: #fff;
            padding: 1rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-cancel:hover {
            background: rgba(255,255,255,0.2);
            border-color: rgba(255,255,255,0.5);
            color: #fff;
            transform: translateY(-2px);
        }

        .btn-back {
            background: rgba(255,255,255,0.2);
            border: none;
            color: #fff;
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            font-weight: 600;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .btn-back:hover {
            background: rgba(255,255,255,0.3);
            transform: translateY(-2px);
            color: #fff;
        }

        .alert-danger {
            background: linear-gradient(135deg, #ff6b6b, #ee5a52);
            border: none;
            border-radius: 15px;
            color: #fff;
            padding: 1rem 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 25px rgba(255,107,107,0.3);
        }

        .form-floating {
            position: relative;
        }

        .form-floating > .form-control {
            height: calc(3.5rem + 2px);
            line-height: 1.25;
            padding: 1rem 0.75rem;
        }

        .form-floating > label {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            padding: 1rem 0.75rem;
            pointer-events: none;
            border: 1px solid transparent;
            transform-origin: 0 0;
            transition: opacity .1s ease-in-out,transform .1s ease-in-out;
            color: rgba(255,255,255,0.7);
        }

        .select2-container--bootstrap4 .select2-selection {
            background-color: rgba(255,255,255,0.1) !important;
            border: 2px solid rgba(34, 125, 199, 0.3) !important;
            border-radius: 12px !important;
            color: #fff !important;
        }

        .select2-container--bootstrap4 .select2-selection--multiple .select2-selection__choice {
            background-color: #2238c7 !important;
            border: none !important;
            border-radius: 20px !important;
            color: #fff !important;
            padding: 0.3rem 0.8rem !important;
        }

        /* Custom Select2 dark theme for dropdown */
        .select2-container--bootstrap4 .select2-results__option {
            background-color: #1e1e1e !important;
            color: #ffffff !important;
        }

        .select2-container--bootstrap4 .select2-results__option--highlighted {
            background-color: #2833f6 !important;
            color: #000000 !important;
        }

        .select2-container--bootstrap4 .select2-results__option:hover {
            background-color: #333333 !important;
            color: #ffffff !important;
        }

        .select2-dropdown {
            background-color: #1e1e1e !important;
            border: 1px solid #258ac8 !important;
        }

        .progress-steps {
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .step {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(34, 92, 199, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 1rem;
            color: #fff;
            font-weight: 700;
            border: 2px solid rgba(34, 67, 199, 0.5);
        }

        .step.active {
            background: linear-gradient(135deg, #30aee6, #2251c7);
            border-color: #228dc7;
            box-shadow: 0 0 20px rgba(34, 81, 199, 0.5);
        }

        @media (max-width: 768px) {
            .hero-header h1 { font-size: 1.8rem; }
            .form-card { padding: 1.5rem; }
            .btn-save, .btn-cancel { padding: 0.8rem 1.5rem; font-size: 1rem; }
        }

        /* Add spacing between back and delete buttons */
        .delete-form {
            margin-left: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="hero-header animate__animated animate__fadeIn">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center">
                <h1><i class="fas fa-edit me-3"></i>Modifier la collection</h1>
                <div>
                    <a href="{{ path('admin_collections_index') }}" class="btn btn-back me-2">
                        <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid animate__animated animate__fadeInUp animate__delay-1s">
        <div class="form-card">
            <div class="d-flex align-items-center mb-4">
                <div class="collection-icon me-3" style="width: 40px; height: 40px; border-radius: 10px; background: linear-gradient(135deg, #30aee5, #25c8ad); display: flex; align-items: center; justify-content: center;">
                    <i class="fas fa-box text-white"></i>
                </div>
                <h4 class="mb-0" style="color: #25c8ad; font-weight: 600;">Modifier les informations de la collection</h4>
            </div>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-info-circle"></i> Informations de base
                    </div>

                    <div class="form-group row mb-4">
                        {{ form_label(form.name, 'Nom de la collection', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                        <div class="col-sm-9">
                            <div class="input-group">
                                <span class="input-group-text" style="background: rgba(37, 200, 173, 0.1); border: 1px solid rgba(37, 200, 173, 0.2); border-right: none; color: #25c8ad;">
                                    <i class="fas fa-tag"></i>
                                </span>
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom de la collection'}}) }}
                            </div>
                            <small class="text-danger">{{ form_errors(form.name) }}</small>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-file-alt"></i> Descriptions
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.description1, 'Description principale', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description1, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Description détaillée de la collection...'}}) }}
                                <div class="text-danger">{{ form_errors(form.description1) }}</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                {{ form_label(form.description2, 'Description secondaire', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description2, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Informations complémentaires...'}}) }}
                                <div class="text-danger">{{ form_errors(form.description2) }}</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-link"></i> Liens externes
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.url1, 'Lien 1', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.url1, {'attr': {'class': 'form-control', 'placeholder': 'https://example.com'}}) }}
                                <div id="url1Preview" class="url-preview" style="{{ collection.url1 ? '' : 'display: none;' }}">
                                    Aperçu: <a href="{{ collection.url1 }}" target="_blank" id="url1Link">{{ collection.url1 }}</a>
                                </div>
                                <div class="text-danger">{{ form_errors(form.url1) }}</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.url2, 'Lien 2', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.url2, {'attr': {'class': 'form-control', 'placeholder': 'https://example.com'}}) }}
                                <div id="url2Preview" class="url-preview" style="{{ collection.url2 ? '' : 'display: none;' }}">
                                    Aperçu: <a href="{{ collection.url2 }}" target="_blank" id="url2Link">{{ collection.url2 }}</a>
                                </div>
                                <div class="text-danger">{{ form_errors(form.url2) }}</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                {{ form_label(form.url3, 'Lien 3', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.url3, {'attr': {'class': 'form-control', 'placeholder': 'https://example.com'}}) }}
                                <div id="url3Preview" class="url-preview" style="{{ collection.url3 ? '' : 'display: none;' }}">
                                    Aperçu: <a href="{{ collection.url3 }}" target="_blank" id="url3Link">{{ collection.url3 }}</a>
                                </div>
                                <div class="text-danger">{{ form_errors(form.url3) }}</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-section">
                    <div class="form-section-title">
                        <i class="fas fa-box"></i>  
                    </div>

                    <div class="form-group row mb-4">
                        {{ form_label(form.products, 'Produits associés', {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.products, {'attr': {'class': 'form-control select2-multiple', 'data-placeholder': 'Sélectionnez des produits'}}) }}
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i> Sélectionnez les produits à associer à cette collection
                            </small>
                            <div class="mt-2">
                                {% for product in collection.products %}
                                    <span class="product-badge">{{ product.name }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-5 text-center">
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-save me-2"></i> Enregistrer les modifications
                    </button>
                    <a href="{{ path('admin_collections_index') }}" class="btn btn-cancel ms-2">
                        Annuler
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2-multiple').select2({
                theme: 'bootstrap4',
                width: '100%',
                placeholder: 'Sélectionnez des options',
                allowClear: true
            });

            // URL preview functionality
            function updateUrlPreview(inputId, previewId, linkId) {
                const input = $(`#${inputId}`);
                const preview = $(`#${previewId}`);
                const link = $(`#${linkId}`);

                input.on('input', function() {
                    const url = $(this).val();
                    if (url) {
                        link.attr('href', url).text(url);
                        preview.show();
                    } else {
                        preview.hide();
                    }
                });

                // Trigger on page load if there's a value
                if (input.val()) {
                    link.attr('href', input.val()).text(input.val());
                    preview.show();
                }
            }

            // Initialize URL previews
            updateUrlPreview('collection_url1', 'url1Preview', 'url1Link');
            updateUrlPreview('collection_url2', 'url2Preview', 'url2Link');
            updateUrlPreview('collection_url3', 'url3Preview', 'url3Link');
        });
    </script>
{% endblock %}
