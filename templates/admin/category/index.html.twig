{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { 
            background: linear-gradient(135deg, #121212 0%, #1a1a2e 100%); 
            color: #fff; 
            font-family: 'Poppins', sans-serif; 
            min-height: 100vh;
        }
        
        .page-header {
            background: linear-gradient(135deg, rgba(48, 174, 229, 0.9), rgba(37, 200, 173, 0.9));
            border-radius: 0 0 20px 20px;
            padding: 2rem 0;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(37, 200, 173, 0.3);
        }
        
        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }
        
        .header h1 { 
            color: #fff; 
            font-weight: 700; 
            margin: 0;
            font-size: 2.2rem;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.2);
            position: relative;
            z-index: 2;
        }
        
        .btn-new-category { 
            background: rgba(255, 255, 255, 0.2); 
            color: #fff; 
            font-weight: 600; 
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }
        
        .btn-new-category:hover { 
            transform: translateY(-2px); 
            box-shadow: 0 8px 20px rgba(255, 255, 255, 0.3);
            background: rgba(255, 255, 255, 0.3);
        }
        
        .table-container {
            background: rgba(30, 30, 30, 0.8);
            border-radius: 20px;
            padding: 1.5rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(37, 200, 173, 0.1);
            position: relative;
            overflow: hidden;
        }
        
        .table-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #30aee5, #25c8ad);
        }
        
        table.dataTable {
            border-collapse: separate;
            border-spacing: 0 8px;
            margin-top: 0 !important;
        }
        
        table.dataTable thead th { 
            background: rgba(37, 200, 173, 0.1); 
            color: #25c8ad; 
            font-weight: 600;
            border: none;
            padding: 15px 10px;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        table.dataTable tbody td {
            padding: 15px 10px;
            border-top: none;
            background: rgba(255, 255, 255, 0.03);
            vertical-align: middle;
        }

        /* Specific styles for category names and dates */
        table.dataTable tbody td:nth-child(2), table.dataTable tbody td:nth-child(5) {
            color: #ffffff !important;
            background-color: #333333 !important;
            border-radius: 6px;
            padding: 10px;
        }
        
        table.dataTable tbody tr:first-child td:first-child {
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }
        
        table.dataTable tbody tr:first-child td:last-child {
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
        }
        
        tbody tr:hover td { 
            background-color: rgba(37, 200, 173, 0.1); 
        }
        
        .badge { 
            font-weight: 500; 
            margin: 0.2rem; 
            padding: 0.5em 0.8em;
            border-radius: 30px;
            font-size: 0.75rem;
        }
        
        .badge.bg-secondary { 
            background: linear-gradient(135deg, #30aee5, #25c8ad) !important;
            box-shadow: 0 2px 10px rgba(37, 200, 173, 0.3);
        }
        
        .category-actions .btn { 
            margin-right: 5px; 
            transition: all 0.3s;
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0;
        }
        
        .category-actions .btn-primary {
            background: rgba(48, 174, 229, 0.2);
            border-color: rgba(48, 174, 229, 0.4);
            color: #30aee5;
        }
        
        .category-actions .btn-danger {
            background: rgba(220, 53, 69, 0.2);
            border-color: rgba(220, 53, 69, 0.4);
            color: #dc3545;
        }
        
        .category-actions .btn:hover { 
            transform: translateY(-2px); 
            box-shadow: 0 6px 15px rgba(37, 200, 173, 0.3);
        }
        
        .category-actions .btn-primary:hover {
            background: #30aee5;
            color: #fff;
        }
        
        .category-actions .btn-danger:hover {
            background: #dc3545;
            color: #fff;
        }
        
        .alert-success {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.9), rgba(32, 201, 151, 0.9));
            border: none;
            color: white;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(32, 201, 151, 0.4);
        }
        
        .dataTables_wrapper .dataTables_length, 
        .dataTables_wrapper .dataTables_filter, 
        .dataTables_wrapper .dataTables_info, 
        .dataTables_wrapper .dataTables_processing, 
        .dataTables_wrapper .dataTables_paginate {
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 1rem;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            color: rgba(255, 255, 255, 0.7) !important;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.current, 
        .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
            background: linear-gradient(135deg, #30aee5, #25c8ad) !important;
            color: white !important;
            border: none;
            border-radius: 50%;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: rgba(37, 200, 173, 0.2) !important;
            color: white !important;
            border: 1px solid rgba(37, 200, 173, 0.4);
        }
        
        @media (max-width: 768px) { 
            thead th, tbody td { font-size: 0.85rem; } 
            .page-header { padding: 1.5rem 0; }
            .header h1 { font-size: 1.8rem; }
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-header animate__animated animate__fadeIn">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center header">
            <h1><i class="fas fa-layer-group me-3"></i>Gestion des catégories</h1>
            <div class="d-flex">
                <a href="{{ path('admin_categories_new') }}" class="btn btn-new-category me-2">
                    <i class="fas fa-plus-circle me-2"></i> Nouvelle catégorie
                </a>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-new-category">
                    <i class="fas fa-arrow-left me-2"></i> Retour au dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid animate__animated animate__fadeInUp animate__delay-1s">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success animate__animated animate__fadeIn">
            <i class="fas fa-check-circle me-2"></i> {{ message }}
        </div>
    {% endfor %}

    <div class="table-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-table me-2" style="color: #25c8ad;"></i>
                <h5 class="mb-0" style="color: #25c8ad; font-weight: 600;">Liste des catégories</h5>
            </div>
            <div class="category-stats">
                <span class="badge" style="background: rgba(37, 200, 173, 0.2); color: #25c8ad;">
                    <i class="fas fa-tag me-1"></i> {{ categories|length }} catégorie(s)
                </span>
            </div>
        </div>
        
        <table id="categoriesTable" class="table table-hover table-borderless align-middle">
            <thead>
                <tr>
                    <th><i class="fas fa-hashtag me-2"></i>ID</th>
                    <th><i class="fas fa-tag me-2"></i>Nom</th>
                    <th><i class="fas fa-sitemap me-2"></i>Sous-catégories</th>
                    <th><i class="fas fa-box me-2"></i>Produits</th>
                    <th><i class="fas fa-calendar-alt me-2"></i>Date de création</th>
                    <th><i class="fas fa-cogs me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr class="animate__animated animate__fadeIn">
                        <td><span class="badge" style="background: rgba(48, 174, 229, 0.15); color: #30aee5;">#{{ category.id }}</span></td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="category-icon me-2" style="width: 32px; height: 32px; border-radius: 8px; background: linear-gradient(135deg, #30aee5, #25c8ad); display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-folder text-white"></i>
                                </div>
                                <span style="font-weight: 500;">{{ category.name }}</span>
                            </div>
                        </td>
                        <td>
                            {% if category.subCategories|length > 0 %}
                                <div class="d-flex flex-wrap">
                                    {% for subCategory in category.subCategories %}
                                        <span class="badge bg-secondary me-1 mb-1">{{ subCategory.name }}</span>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <span class="badge" style="background: rgba(255, 255, 255, 0.1); color: rgba(255, 255, 255, 0.6);">Aucune</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if category.products|length > 0 %}
                                <span class="badge" style="background: rgba(40, 167, 69, 0.2); color: #28a745;">
                                    <i class="fas fa-box me-1"></i> {{ category.products|length }} produit(s)
                                </span>
                            {% else %}
                                <span class="badge" style="background: rgba(255, 255, 255, 0.1); color: rgba(255, 255, 255, 0.6);">Aucun</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="far fa-calendar-alt me-2" style="color: rgba(255, 255, 255, 0.6);"></i>
                                {{ category.createdAt|date('d/m/Y H:i') }}
                            </div>
                        </td>
                        <td class="category-actions">
                            <a href="{{ path('admin_categories_edit', {'id': category.id}) }}" class="btn btn-primary" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('admin_categories_delete', {'id': category.id}) }}"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');"
                                  style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                <button class="btn btn-danger" title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <div class="empty-state">
                                <i class="fas fa-folder-open" style="font-size: 3rem; color: rgba(255, 255, 255, 0.2); margin-bottom: 1rem;"></i>
                                <p class="text-muted">Aucune catégorie trouvée</p>
                                <a href="{{ path('admin_categories_new') }}" class="btn btn-sm" style="background: linear-gradient(135deg, #30aee5, #25c8ad); color: white; border-radius: 30px; padding: 0.5rem 1.5rem;">
                                    <i class="fas fa-plus-circle me-2"></i> Créer une catégorie
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2-multiple').select2({ theme: 'bootstrap4', width: '100%', placeholder: 'Sélectionnez des options', allowClear: true });

            $('#categoriesTable').DataTable({
                pageLength: 10,
                lengthMenu: [5,10,25,50],
                responsive: true,
                columnDefs: [{ orderable: false, targets: [2,5] }]
            });
        });
    </script>
{% endblock %}
