{% extends 'base.html.twig' %}

{% block title %}Edit Categorie - {{ category.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary: #3b82f6;
            --secondary: #60a5fa;
            --error: #ef4444;
            --success: #10b981;
            --bg-primary: #0a1a3a;
            --bg-secondary: #1e3a8a;
            --surface: rgba(17, 24, 39, 0.95);
            --card-bg: rgba(31, 41, 55, 0.8);
            --text-primary: #e5e7eb;
            --text-secondary: #9ca3af;
            --text-muted: #6b7280;
            --border: rgba(59, 130, 246, 0.2);
            --shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }
        body::before {
            content: '';
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.2;
            pointer-events: none;
            z-index: -1;
        }
        .page-header {
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            border-radius: 0 0 24px 24px;
            padding: 2.5rem 0;
            margin-bottom: 2.5rem;
            box-shadow: var(--shadow);
            opacity: 0;
            transform: translateY(-20px);
        }
        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }
        .header-title { display: flex; align-items: center; gap: 1rem; }
        .header-title h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #ffffff;
        }
        .header-icon {
            width: 48px; height: 48px; border-radius: 12px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex; align-items: center; justify-content: center;
        }
        .header-actions { display: flex; gap: 1rem; flex-wrap: wrap; }
        .btn-modern {
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border: none; color: #ffffff; padding: 0.75rem 1.75rem;
            border-radius: 12px; font-weight: 600; text-decoration: none;
            display: inline-flex; align-items: center; gap: 0.5rem;
            transition: all 0.3s ease; font-size: 0.9rem;
        }
        .btn-modern.btn-secondary { background: #4b5563; }
        .btn-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
        }
        .main-container { max-width: 800px; margin: 0 auto; padding: 0 2rem 2rem; }
        .category-info {
            background: var(--surface); border-radius: 16px; padding: 1.5rem;
            margin-bottom: 2rem; box-shadow: var(--shadow);
            border: 1px solid var(--border); opacity: 0; transform: translateY(30px);
        }
        .category-meta { display: flex; align-items: center; gap: 1rem; flex-wrap: wrap; }
        .category-icon-large {
            width: 60px; height: 60px; border-radius: 12px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex; align-items: center; justify-content: center; flex-shrink: 0;
        }
        .category-details h3 {
            font-family: 'Poppins', sans-serif; font-size: 1.5rem;
            font-weight: 600; color: var(--text-primary); margin-bottom: 0.25rem;
        }
        .category-stats { display: flex; gap: 1rem; flex-wrap: wrap; }
        .stat-item {
            background: rgba(59, 130, 246, 0.15); color: var(--secondary);
            padding: 0.5rem 1rem; border-radius: 12px; font-size: 0.9rem;
            font-weight: 500; display: flex; align-items: center; gap: 0.5rem;
        }
        .form-container {
            background: var(--surface); border-radius: 16px; padding: 2.5rem;
            box-shadow: var(--shadow); border: 1px solid var(--border);
            opacity: 0; transform: translateY(30px);
            position: relative;
        }
        .form-title {
            font-family: 'Poppins', sans-serif; font-size: 1.5rem; font-weight: 600;
            color: var(--secondary); margin-bottom: 0.5rem;
            display: flex; align-items: center; gap: 0.75rem;
        }
        .form-subtitle { color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 2rem; line-height: 1.6; }
        .form-group { margin-bottom: 2rem; position: relative; }
        .form-label {
            display: block; font-weight: 600; color: var(--text-primary);
            margin-bottom: 0.75rem; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 0.5px;
        }
        .form-control {
            width: 100%; background: rgba(31, 41, 55, 0.8);
            border: 1px solid var(--border); border-radius: 12px;
            padding: 1rem 1.25rem; color: var(--text-primary);
            font-size: 0.9rem; transition: all 0.3s ease;
        }
        .form-control:focus {
            outline: none; border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
        }
        .form-control.textarea { min-height: 120px; resize: vertical; }
        .form-actions {
            display: flex; gap: 1rem; justify-content: flex-end;
            margin-top: 2.5rem; padding-top: 2rem; border-top: 1px solid var(--border);
        }
        .btn-cancel { background: #4b5563; color: #ffffff; border: none; }
        .delete-section {
            background: rgba(239, 68, 68, 0.05); border: 1px solid rgba(239, 68, 68, 0.2);
            border-radius: 16px; padding: 1.5rem; margin-top: 2rem;
            opacity: 0; transform: translateY(20px);
        }
        .delete-title {
            font-family: 'Poppins', sans-serif; font-size: 1.25rem; font-weight: 600;
            color: var(--error); margin-bottom: 0.5rem;
            display: flex; align-items: center; gap: 0.5rem;
        }
        .delete-description { color: var(--text-secondary); font-size: 0.9rem; margin-bottom: 1rem; }
        .btn-delete { background: linear-gradient(90deg, var(--error), #f87171); color: #ffffff; border: none; }
        .form-error { color: var(--error); font-size: 0.85rem; margin-top: 0.5rem; }
        .icon { width: 20px; height: 20px; stroke: currentColor; stroke-width: 2; fill: none; }
        .icon-sm { width: 16px; height: 16px; }
        .icon-lg { width: 24px; height: 24px; }
        .loading { opacity: 0; transform: translateY(30px); }

        /* Styles pour Select2 */
        .select2-container { width: 100% !important; }
        .select2-container--default .select2-selection--multiple {
            background-color: var(--card-bg) !important;
            border: 1px solid var(--border) !important;
            border-radius: 12px !important;
            min-height: 45px;
            padding: 5px;
        }
        .select2-container--default.select2-container--focus .select2-selection--multiple {
            border-color: var(--primary) !important;
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25) !important;
        }
        .select2-selection__choice {
            background-color: var(--primary) !important;
            border: 1px solid var(--primary) !important;
            border-radius: 8px !important;
            color: white !important;
            padding: 5px 10px !important;
            margin: 4px !important;
        }
        .select2-selection__choice__remove {
            color: rgba(255, 255, 255, 0.7) !important;
            margin-right: 5px !important;
        }
        .select2-search__field {
            color: var(--text-primary) !important;
            background: transparent !important;
        }
        .select2-dropdown {
            background-color: var(--card-bg) !important;
            border: 1px solid var(--border) !important;
            border-radius: 12px !important;
        }
        .select2-results__option {
            background-color: var(--card-bg) !important;
            color: var(--text-primary) !important;
            padding: 10px 15px !important;
        }
        .select2-results__option--highlighted[aria-selected] {
            background-color: var(--primary) !important;
            color: white !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-header loading">
        <div class="header-container">
            <div class="header-title">
                <div class="header-icon">
                    <svg class="icon icon-lg" viewBox="0 0 24 24" fill="white">
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                    </svg>
                </div>
                <h1>Edit : {{ category.name }}</h1>
            </div>
            <div class="header-actions">
                <a href="{{ path('admin_categories_index') }}" class="btn-modern btn-secondary">
                    <svg class="icon icon-sm" viewBox="0 0 24 24"><path d="M19 12H5"/><path d="M12 19l-7-7 7-7"/></svg>
                    Back to list
                </a>
            </div>
        </div>
    </div>

    <div class="main-container">
        <!-- Category Info -->
        <div class="category-info loading">
            <div class="category-meta">
                <div class="category-icon-large">
                    <svg class="icon icon-lg" viewBox="0 0 24 24" fill="white"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/></svg>
                </div>
                <div class="category-details">
                    <h3>{{ category.name }}</h3>
                    <div class="category-stats">
                        <div class="stat-item">
                            <svg class="icon icon-sm" viewBox="0 0 24 24"><path d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/></svg>
                            ID: {{ category.id }}
                        </div>
                        {% if category.subCategories|length > 0 %}
                            <div class="stat-item">
                                <svg class="icon icon-sm" viewBox="0 0 24 24"><path d="M2 13h20"/></svg>
                                {{ category.subCategories|length }} Subcategories
                            </div>
                        {% endif %}
                        {% if category.products|length > 0 %}
                            <div class="stat-item">
                                <svg class="icon icon-sm" viewBox="0 0 24 24"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/></svg>
                                {{ category.products|length }} products
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Form -->
        <div class="form-container loading">
            <div class="form-title">
                <svg class="icon" viewBox="0 0 24 24" style="color: var(--primary);"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                Edit information
            </div>
            <p class="form-subtitle">
                Update the information in this category. Changes will be applied immediately.
            </p>

            {{ form_start(form, {'attr': {'class': 'category-form', 'novalidate': 'novalidate'}}) }}

            <div class="form-group">
                {{ form_label(form.name, 'Name Of categorie') }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                <div class="form-error">{{ form_errors(form.name) }}</div>
            </div>

            {% if form.description is defined %}
                <div class="form-group">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control textarea'}}) }}
                    <div class="form-error">{{ form_errors(form.description) }}</div>
                </div>
            {% endif %}

            <!-- Sous-catégories -->
            {% if form.subCategories is defined %}
                <div class="form-group floating">
                    {{ form_widget(form.subCategories, {'attr': {'class': 'form-control select2-multiple', 'data-placeholder': 'Select sub-categories'}}) }}
                    {{ form_label(form.subCategories, 'Sous-catégories', {'label_attr': {'class': 'form-label'}}) }}
                    {% if form_errors(form.subCategories) %}
                        <div class="form-error">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="15" y1="9" x2="9" y2="15"/>
                                <line x1="9" y1="9" x2="15" y2="15"/>
                            </svg>
                            {{ form_errors(form.subCategories) }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            <!-- Produits -->
            {% if form.products is defined %}
                <div class="form-group floating">
                    {{ form_widget(form.products, {'attr': {'class': 'form-control select2-multiple', 'data-placeholder': 'Select products'}}) }}
                    {{ form_label(form.products, 'Produits associés', {'label_attr': {'class': 'form-label'}}) }}
                    {% if form_errors(form.products) %}
                        <div class="form-error">
                            <svg class="icon icon-sm" viewBox="0 0 24 24">
                                <circle cx="12" cy="12" r="10"/>
                                <line x1="15" y1="9" x2="9" y2="15"/>
                                <line x1="9" y1="9" x2="15" y2="15"/>
                            </svg>
                            {{ form_errors(form.products) }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            <div class="form-actions">
                <a href="{{ path('admin_categories_index') }}" class="btn-modern btn-cancel">
                    <svg class="icon icon-sm" viewBox="0 0 24 24"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
                    Annuler
                </a>
                <button type="submit" class="btn-modern btn-primary">
                    <svg class="icon icon-sm" viewBox="0 0 24 24"><polyline points="20,6 9,17 4,12"/></svg>
                    Save Changes
                </button>
            </div>

            {{ form_end(form) }}
        </div>

        <!-- Delete Section -->
        <div class="delete-section loading">
            <div class="delete-title">
                <svg class="icon icon-sm" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg>
                Danger Zone
            </div>
            <p class="delete-description">
                Deleting this category is irreversible. All associated products will also be affected.
            </p>
            {{ include('admin/category/_delete_form.html.twig') }}
        </div>
    </div>

    <!-- jQuery et Select2 JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('.select2-multiple').select2({
                theme: 'default',
                width: '100%',
                placeholder: function() {
                    return $(this).data('placeholder');
                },
                allowClear: true,
                dropdownParent: $('.form-container')
            });
        });

        // GSAP Animations
        window.addEventListener('load', function() {
            gsap.to('.loading', {
                opacity: 1,
                y: 0,
                duration: 0.6,
                stagger: 0.1,
                ease: "power3.out"
            });
        });
    </script>
{% endblock %}
