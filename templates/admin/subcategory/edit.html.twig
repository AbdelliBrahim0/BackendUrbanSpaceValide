{% extends 'base.html.twig' %}

{% block title %}Modifier la sous-catégorie - {{ subcategory.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Select2 -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet">

    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

    <style>
        :root {
            --primary: #3b82f6;
            --secondary: #60a5fa;
            --error: #ef4444;
            --success: #10b981;
            --bg-primary: #0a1a3a;
            --bg-secondary: #1e3a8a;
            --surface: rgba(17, 24, 39, 0.95);
            --card-bg: rgba(31, 41, 55, 0.8);
            --text-primary: #e5e7eb;
            --text-secondary: #9ca3af;
            --text-muted: #6b7280;
            --border: rgba(59, 130, 246, 0.2);
            --shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* Animated Background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.2;
            pointer-events: none;
            z-index: -1;
        }

        /* Page Header */
        .page-header {
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            border-radius: 0 0 24px 24px;
            padding: 2.5rem 0;
            margin-bottom: 2.5rem;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow);
            opacity: 0;
            transform: translateY(-20px);
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        .header-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-title {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .header-title h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #ffffff;
            text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
            margin: 0;
        }

        .header-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .header-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .btn-modern {
            background: linear-gradient(90deg, var(--primary), var(--secondary));
            border: none;
            color: #ffffff;
            padding: 0.75rem 1.75rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .btn-modern.btn-secondary {
            background: #4b5563;
        }

        .btn-modern:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(59, 130, 246, 0.4);
        }

        .btn-modern.btn-secondary:hover {
            background: #6b7280;
        }

        /* Main Container */
        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem 2rem;
        }

        /* Alert */
        .alert-modern {
            background: var(--surface);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: 12px;
            padding: 1rem 1.5rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: var(--text-primary);
            opacity: 0;
            transform: translateY(-20px);
        }

        .alert-icon {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            background: var(--error);
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .alert-modern .btn-close {
            filter: invert(1);
            opacity: 0.8;
        }

        /* Card */
        .card-modern {
            background: var(--surface);
            border-radius: 16px;
            padding: 2rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
            position: relative;
            overflow: hidden;
            opacity: 0;
            transform: translateY(30px);
        }

        .card-modern::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        .card-header {
            background: transparent;
            border-bottom: none;
            padding: 0 0 1.5rem;
        }

        .card-header h5 {
            font-family: 'Poppins', sans-serif;
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--secondary);
            margin: 0;
        }

        .card-body {
            padding: 0;
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            color: var(--text-primary);
            font-weight: 500;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .form-control {
            background: rgba(31, 41, 55, 0.8);
            border: 1px solid var(--border);
            border-radius: 12px;
            color: var(--text-primary);
            padding: 0.75rem 1.25rem;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(31, 41, 55, 1);
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
            color: var(--text-primary);
        }

        .form-text {
            color: var(--text-secondary);
            font-size: 0.85rem;
        }

        .form-error {
            color: var(--error);
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        /* Select2 Custom Styles */
        .select2-container--bootstrap4 .select2-selection {
            background: rgba(31, 41, 55, 0.8);
            border: 1px solid var(--border);
            border-radius: 12px;
            color: var(--text-primary);
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }

        .select2-container--bootstrap4 .select2-selection__rendered {
            color: var(--text-primary);
        }

        .select2-container--bootstrap4 .select2-selection__placeholder {
            color: var(--text-secondary);
        }

        .select2-container--bootstrap4 .select2-selection__arrow {
            filter: invert(1);
        }

        .select2-container--bootstrap4 .select2-dropdown {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 12px;
        }

        .select2-container--bootstrap4 .select2-results__option {
            color: var(--text-primary);
            font-size: 0.9rem;
        }

        .select2-container--bootstrap4 .select2-results__option--highlighted {
            background: rgba(59, 130, 246, 0.3);
            color: #ffffff;
        }

        .select2-container--bootstrap4 .select2-selection__choice {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border: none;
            color: #ffffff;
            border-radius: 8px;
            font-size: 0.85rem;
        }

        .select2-container--bootstrap4 .select2-selection__choice__remove {
            color: #ffffff;
            opacity: 0.8;
        }

        .select2-container--bootstrap4 .select2-search--inline .select2-search__field {
            color: var(--text-primary);
        }

        /* Icon styles */
        .icon {
            width: 20px;
            height: 20px;
            stroke: currentColor;
            stroke-width: 2;
            fill: none;
        }

        .icon-sm {
            width: 16px;
            height: 16px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .main-container {
                padding: 0 1rem 1rem;
            }

            .header-container {
                padding: 0 1rem;
                flex-direction: column;
                text-align: center;
            }

            .header-title h1 {
                font-size: 1.8rem;
            }

            .card-modern {
                padding: 1.5rem;
            }
        }

        /* Loading Animation */
        .loading {
            opacity: 0;
            transform: translateY(30px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-header loading">
        <div class="header-container">
            <div class="header-title">
                <div class="header-icon">
                    <svg class="icon" viewBox="0 0 24 24" fill="white">
                        <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>
                        <path d="M2 13h20"/>
                    </svg>
                </div>
                <h1>Modify : {{ subcategory.name }}</h1>
            </div>
            <div class="header-actions">
                <a href="{{ path('admin_subcategories_index') }}" class="btn-modern btn-secondary">
                    <svg class="icon icon-sm" viewBox="0 0 24 24">
                        <path d="M19 12H5"/>
                        <path d="M12 19l-7-7 7-7"/>
                    </svg>
                    Back to list
                </a>
            </div>
        </div>
    </div>

    <div class="main-container">
        {% for message in app.flashes('error') %}
            <div class="alert-modern loading">
                <div class="alert-icon">
                    <svg class="icon icon-sm" viewBox="0 0 24 24" fill="white">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8z"/>
                        <path d="M12 17l1-3V9h-2v5l1 3z"/>
                    </svg>
                </div>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="card-modern loading">
            <div class="card-header">
                <h5>Modify the information</h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group row mb-4">
                    <div class="col-lg-8 mx-auto">
                        <div class="form-group mb-4">
                            {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            <div class="form-error">{{ form_errors(form.name) }}</div>
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.categories, 'Related categories', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.categories, {'attr': {'class': 'form-control select2-multiple'}}) }}
                            <small class="form-text">Select one or more categories</small>
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.products, 'Related products', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.products, {'attr': {'class': 'form-control select2-multiple'}}) }}
                            <small class="form-text">Select one or more products (optional)</small>
                        </div>

                        <div class="form-group mt-5 text-center">
                            <button type="submit" class="btn-modern btn-primary">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <path d="M17 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14c1.1 0 2-.9 2-2V7l-4-4zm-5 16c-1.66 0-3-1.34-3-3s1.34-3 3-3 3 1.34 3 3-1.34 3-3 3zm3-10H5V5h10v4z"/>
                                </svg>
                                Save changes
                            </button>
                            <a href="{{ path('admin_subcategories_index') }}" class="btn-modern btn-secondary ms-2">
                                <svg class="icon icon-sm" viewBox="0 0 24 24">
                                    <path d="M18.36 19.78a2 2 0 0 1-2.83 0L12 16.24l-3.54 3.54a2 2 0 0 1-2.83-2.83L9.17 13 5.63 9.46a2 2 0 0 1 2.83-2.83L12 10.17l3.54-3.54a2 2 0 0 1 2.83 2.83L14.83 13l3.54 3.54a2 2 0 0 1 0 2.83z"/>
                                </svg>
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // GSAP Animations
        window.addEventListener('load', function() {
            // Page header animation
            gsap.to('.page-header', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power3.out"
            });

            // Alert animation
            gsap.to('.alert-modern', {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power3.out",
                delay: 0.2
            });

            // Card animation
            gsap.to('.card-modern', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power3.out",
                delay: 0.3
            });
        });

        // Select2 initialization
        $(document).ready(function() {
            $('.select2-multiple').select2({
                theme: 'bootstrap4',
                width: '100%',
                placeholder: 'Sélectionnez des options',
                allowClear: true,
                closeOnSelect: false
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert-modern').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
{% endblock %}