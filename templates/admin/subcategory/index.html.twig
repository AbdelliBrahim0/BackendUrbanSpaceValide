{% extends 'base.html.twig' %}

{% block title %}Gestion des sous-catégories{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #121212 0%, #1a1a2e 100%);
            color: #fff;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
        }

        .page-header {
            background: linear-gradient(135deg, rgba(48, 174, 229, 0.9), rgba(37, 200, 173, 0.9));
            border-radius: 0 0 20px 20px;
            padding: 2rem 0;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(37, 200, 173, 0.3);
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }

        .header h1 {
            color: #fff;
            font-weight: 700;
            margin: 0;
            font-size: 2.2rem;
            text-shadow: 2px 2px 10px rgba(0,0,0,0.2);
            position: relative;
            z-index: 2;
        }

        .btn-new-subcategory {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
            font-weight: 600;
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
            border: 1px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            position: relative;
            z-index: 2;
        }

        .btn-new-subcategory:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(255, 255, 255, 0.3);
            background: rgba(255, 255, 255, 0.3);
        }

        .table-container {
            background: rgba(30, 30, 30, 0.9);
            border-radius: 20px;
            padding: 1.5rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(37, 200, 173, 0.1);
            position: relative;
            overflow: hidden;
        }

        .table-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #30aee5, #25c8ad);
        }

        table.dataTable {
            border-collapse: separate;
            border-spacing: 0 8px;
            margin-top: 0 !important;
        }

        table.dataTable thead th {
            background: rgba(37, 200, 173, 0.1);
            color: #25c8ad;
            font-weight: 600;
            border: none;
            padding: 15px 10px;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        table.dataTable tbody td {
            padding: 15px 10px;
            border-top: none;
            background: #2a2a2a;
            color: #ffffff;
            vertical-align: middle;
        }

        table.dataTable tbody tr:first-child td:first-child {
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }

        table.dataTable tbody tr:first-child td:last-child {
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        tbody tr:hover td {
            background-color: rgba(37, 200, 173, 0.1);
        }

        .badge {
            font-weight: 600;
            text-shadow: 0 0 3px rgba(0,0,0,0.3);
            margin: 0.2rem;
            padding: 0.5em 0.8em;
        }

        .badge.bg-primary {
            background: linear-gradient(90deg, #30aee6, #22c7b0) !important;
            border: none;
        }

        .badge.bg-secondary {
            background: #6c757d !important;
        }

        .subcategory-actions .btn {
            margin-right: 5px;
            transition: all 0.3s;
            border: none;
        }

        .subcategory-actions .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(34,199,176,0.5);
        }

        .alert { border: none; border-radius: 8px; }

        @media (max-width: 768px) {
            thead th, tbody td { font-size: 0.85rem; }
        }
    </style>
{% endblock %}

{% block body %}
<div class="page-header animate__animated animate__fadeIn">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center header">
            <h1><i class="fas fa-folder-tree me-3"></i>Gestion des sous-catégories</h1>
            <a href="{{ path('admin_subcategories_new') }}" class="btn-new-subcategory">
                <i class="fas fa-plus-circle me-2"></i> Nouvelle sous-catégorie
            </a>
        </div>
    </div>
</div>

<div class="container-fluid animate__animated animate__fadeInUp animate__delay-1s">

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Subcategories Table -->
    <div class="table-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-table me-2" style="color: #25c8ad;"></i>
                <h5 class="mb-0" style="color: #25c8ad; font-weight: 600;">Liste des sous-catégories</h5>
            </div>
            <div class="subcategory-stats">
                <span class="badge" style="background: rgba(37, 200, 173, 0.2); color: #25c8ad;">
                    <i class="fas fa-folder-tree me-1"></i> {{ subcategories|length }} sous-catégorie(s)
                </span>
            </div>
        </div>
        <table id="subcategoriesTable" class="table table-borderless align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Catégories</th>
                    <th>Produits</th>
                    <th>Date de création</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for subcategory in subcategories %}
                    <tr>
                        <td>{{ subcategory.id }}</td>
                        <td>{{ subcategory.name }}</td>
                        <td>
                            {% if subcategory.categories|length > 0 %}
                                {% for category in subcategory.categories %}
                                    <span class="badge bg-primary">{{ category.name }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Aucune</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if subcategory.products|length > 0 %}
                                {{ subcategory.products|length }} produit(s)
                            {% else %}
                                <span class="text-muted">Aucun</span>
                            {% endif %}
                        </td>
                        <td>{{ subcategory.createdAt|date('d/m/Y H:i') }}</td>
                        <td class="subcategory-actions">
                            <a href="{{ path('admin_subcategories_edit', {'id': subcategory.id}) }}"
                               class="btn btn-sm btn-primary"
                               title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post"
                                  action="{{ path('admin_subcategories_delete', {'id': subcategory.id}) }}"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette sous-catégorie ?');"
                                  style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ subcategory.id) }}">
                                <button class="btn btn-sm btn-danger" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted">Aucune sous-catégorie trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2-multiple').select2({
                theme: 'bootstrap4',
                width: '100%',
                placeholder: 'Sélectionnez des options',
                allowClear: true
            });

            $('#subcategoriesTable').DataTable({
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.5/i18n/fr-FR.json'
                },
                columnDefs: [
                    { orderable: false, targets: [2, 5] },
                    { className: 'text-center', targets: [0, 3, 4, 5] }
                ]
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow', function() {
                    $(this).remove();
                });
            }, 5000);
        });
    </script>
{% endblock %}
