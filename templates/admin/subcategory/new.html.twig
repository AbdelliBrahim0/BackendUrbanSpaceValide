{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        // GSAP Animations
        window.addEventListener('load', function() {
            // Page header animation
            gsap.to('.page-header', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power3.out"
            });

            // Form container animation
            gsap.to('.form-container', {
                opacity: 1,
                y: 0,
                duration: 0.8,
                ease: "power3.out",
                delay: 0.2
            });

            // Form elements staggered animation
            gsap.to('.form-group', {
                opacity: 1,
                y: 0,
                duration: 0.6,
                stagger: 0.1,
                ease: "power3.out",
                delay: 0.4
            });
        });

        // Initialize Select2 and other form interactions
        $(document).ready(function() {
            // Initialize Select2 with modern styling
            $('.select2-multiple').select2({
                width: '100%',
                placeholder: '',
                allowClear: true,
                closeOnSelect: false,
                language: {
                    noResults: function() {
                        return "Aucun r√©sultat trouv√©";
                    },
                    searching: function() {
                        return "Recherche en cours...";
                    }
                }
            });

            // Apply floating label effect to Select2
            $('.select2-multiple').each(function() {
                const $select = $(this);
                const $container = $select.next('.select2-container');
                const $label = $select.parent().find('.form-label');

                // Update label on selection change
                $select.on('change', function() {
                    if ($select.val() && $select.val().length > 0) {
                        $container.addClass('select2-container--filled');
                    } else {
                        $container.removeClass('select2-container--filled');
                    }
                });

                // Update label on focus
                $container.on('select2:open', function() {
                    $container.addClass('select2-container--focus');
                });

                $container.on('select2:close', function() {
                    $container.removeClass('select2-container--focus');
                });
            });

            // Enhanced form validation with animations
            document.querySelectorAll('.form-control:not(.select2-hidden-accessible)').forEach(input => {
                input.addEventListener('focus', function() {
                    gsap.to(this, {
                        scale: 1.02,
                        duration: 0.2,
                        ease: "power2.out"
                    });
                });

                input.addEventListener('blur', function() {
                    gsap.to(this, {
                        scale: 1,
                        duration: 0.2,
                        ease: "power2.out"
                    });

                    if (this.hasAttribute('required') && this.value.trim() === '') {
                        this.style.borderColor = 'var(--error)';
                        gsap.to(this, {
                            x: [0, -10, 10, -5, 5, 0],
                            duration: 0.5,
                            ease: "power2.out"
                        });
                    } else {
                        this.style.borderColor = 'var(--border)';
                    }
                });

                input.addEventListener('input', function() {
                    if (this.style.borderColor === 'var(--error)' && this.value.trim() !== '') {
                        this.style.borderColor = 'var(--success)';
                        gsap.to(this, {
                            borderColor: 'var(--success)',
                            duration: 0.3,
                            ease: "power2.out"
                        });
                    }
                });
            });

            // Select2 validation
            $('.select2-multiple').each(function() {
                const $select = $(this);
                $select.on('change', function() {
                    if ($select.hasClass('required') && (!$select.val() || $select.val().length === 0)) {
                        $select.next('.select2-container').find('.select2-selection').css('borderColor', 'var(--error)');
                    } else {
                        $select.next('.select2-container').find('.select2-selection').css('borderColor', 'var(--border)');
                    }
                });
            });
        });

        // Form submission with enhanced UX
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.subcategory-form');
            const submitBtn = document.querySelector('button[type="submit"]');

            if (form && submitBtn) {
                form.addEventListener('submit', function(e) {
                    const originalContent = submitBtn.innerHTML;

                    // Animate button
                    gsap.to(submitBtn, {
                        scale: 0.95,
                        duration: 0.1,
                        yoyo: true,
                        repeat: 1,
                        ease: "power2.inOut"
                    });

                    // Show loading state
                    submitBtn.innerHTML = `
                        <svg class="icon icon-sm animate-spin" viewBox="0 0 24 24">
                            <path d="M21 12a9 9 0 11-6.219-8.56"/>
                        </svg>
                        Cr√©ation en cours...
                    `;
                    submitBtn.disabled = true;

                    // Add spinning animation
                    const style = document.createElement('style');
                    style.textContent = `
                        .animate-spin {
                            animation: spin 1s linear infinite;
                        }
                        @keyframes spin {
                            from { transform: rotate(0deg); }
                            to { transform: rotate(360deg); }
                        }
                    `;
                    document.head.appendChild(style);

                    // Simulate success animation (remove in actual implementation if backend handles redirect)
                    setTimeout(() => {
                        const successModal = document.createElement('div');
                        successModal.className = 'success-animation';
                        successModal.innerHTML = `
                            <div class="success-icon">
                                <svg class="icon icon-lg" viewBox="0 0 24 24" fill="white">
                                    <polyline points="20,6 9,17 4,12"/>
                                </svg>
